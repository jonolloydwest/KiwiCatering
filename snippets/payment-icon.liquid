<a href="javascript:void(0)" class="payment-icon">
    {% if settings.payment_visaimg %}
      {% assign visa_alt = settings.payment_visaimg.alt | default: shop.name %}
      {% assign visa_width = settings.payment_visaimg.width | default: 60 %}
      {% assign visa_height = settings.payment_visaimg.height | default: 40 %}
      {% assign visa_src = settings.payment_visaimg | image_url: width: 120 %}
      <img src="{{ visa_src }}" class="payment-icon-img" alt="{{ visa_alt }}" width="{{ visa_width }}" height="{{ visa_height }}" loading="lazy">
    {% else %}
      <img src="{{ 'placeholder-image.svg' | asset_url }}" class="payment-icon-img" alt="{{ shop.name }}" width="40" height="25" loading="lazy">
    {% endif %}
    {% if settings.payment_masterimg %}
      {% assign master_alt = settings.payment_masterimg.alt | default: shop.name %}
      {% assign master_width = settings.payment_masterimg.width | default: 60 %}
