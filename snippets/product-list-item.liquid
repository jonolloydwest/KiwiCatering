{%- assign variant = product.selected_or_first_available_variant -%}
{%- if product.available -%}
{%- assign func = "Shopify.addItem(" | append: variant.id | append: ", 1)" -%}
{%- endif -%}

<div class="single-product-wrap">
    <div class="{% if product.available %}product-image{% else %}product-image stock-out{% endif %}">
        <a class="pro-img" href="{{ product.url | within: collection }}">
            {% if product.featured_image %}
              {% assign featured_alt = product.featured_image.alt | default: product.title | escape %}
              {{ product.featured_image | image_url: width: 458, height: 500, crop: 'center' | image_tag: class: 'img-fluid img1 lazyload', width: 458, height: 500, loading: 'lazy', alt: featured_alt }}
            {% else %}
              <img class="img-fluid img1 lazyload" src="{{ 'placeholder-image.svg' | asset_url }}" alt="{{ product.title | escape  }}" width="458" height="500" loading="lazy">
            {% endif %}
            {% if product.images.size > 1 %}
              {% assign secondary_image = product.images[1] %}
              {% assign secondary_alt = secondary_image.alt | default: product.title | escape %}
              {{ secondary_image | image_url: width: 458, height: 500, crop: 'center' | image_tag: class: 'img-fluid img2 lazyload', width: 458, height: 500, loading: 'lazy', alt: secondary_alt }}
            {% endif %}
        </a>
        <div class="product-label">
            {%- render 'product-label' -%}
        </div>
    </div>
    <div class="product-content">
        <h3>
            <a href="{{ product.url | within: collection }}" title="{{ product.title }}">{{ product.title | truncate: 30 }}</a>
        </h3>
        <div class="product-ratting">
            <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
        </div>
        <div class="price-box">
            <span class="new-price">{{ product.price | money }}</span>
            {% if product.compare_at_price_max > product.price %}
            <span class="old-price">{{ product.compare_at_price | money }}</span>
            {% endif %}
        </div>
        {% if product.available %}
        <div class="product-action">
            {% render 'wishlist-button'%}

            {% if product.description contains '[affiliate_link]' and product.available %}
            {% assign affiliate_link_first = product.description | split:'[/affiliate_link]' | first %}
            {% assign affiliate_link_final = affiliate_link_first | split:'[affiliate_link]' | last %}
            <a class="add-to-cart" title="{{ 'products.product.add_to_cart' | t }}" href="{{ affiliate_link_final }}" >
                <i class="fa fa-shopping-bag"></i>
            </a>
            {% elsif product.available %}
            <a href="javascript:void(0);" onclick="{{ func }}; return false;" class="add-to-cart ajax-spin-cart">
                <span>
                    <span class="cart-title"><i class="fa fa-shopping-bag"></i></span>
                    <span class="cart-loading animated infinite rotateOut"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-loader"><line x1="12" y1="2" x2="12" y2="6"></line><line x1="12" y1="18" x2="12" y2="22"></line><line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line><line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line><line x1="2" y1="12" x2="6" y2="12"></line><line x1="18" y1="12" x2="22" y2="12"></line><line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line><line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line></svg></span>
                    <span class="cart-added"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg></span>
                    <span class="cart-unavailable"><i class="ion-android-alert"></i></span>
                </span>
            </a>
            {% else %}
            <a class="disabled-add-to-cart add-to-cart" href="#" title="{{ 'products.product.add_to_cart' | t }}">
                <i class="fa fa-shopping-bag"></i>
            </a>
            {% endif %}

            <a href="javascript:void(0);" onclick="quiqview('{{ product.handle | handleize }}')" class="quick-view">
                <i class="fa fa-eye"></i>
            </a>
        </div>
        {% endif %}
    </div>
</div>
