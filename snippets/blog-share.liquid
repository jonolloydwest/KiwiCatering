{% if template contains 'article' or template contains 'blog' %}
{% capture permalink_u_r_l %}{{ shop.url }}{{ article.url }}{% endcapture %}
{% capture share_title %}{{ article.title | url_param_escape }}{% endcapture %}

{% elsif template contains 'product' %}
{% capture permalink_u_r_l %}{{ shop.url }}{{ product.url }}{% endcapture %}
{% capture share_title %}{{ product.title | url_param_escape }}{% endcapture %}

{% elsif template == 'password' %}
{% capture permalink_u_r_l %}{{ shop.url }}{% endcapture %}
{% capture share_title %}{% unless shop.description == blank %}{{ shop.description | url_param_escape }}{% else %}{{ shop.name | url_param_escape }}{% endunless %}{% endcapture %}

{% endif %}

{% assign share_button_style = section.settings.social_sharing_style %}

<div class="blog-share">

<p class="share-tags-title f-left">Share This</p>

<ul class="action-button share-button f-left {{ share_button_style }}" data-permalink="{{ permalink_u_r_l }}">
  <li>
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ permalink_u_r_l }}" title="Share on Facebook" tabindex="0"><i class="zmdi zmdi-facebook"></i></a>
  </li>
  <li>
    <a target="_blank" href="//twitter.com/share?text={{ share_title }}&amp;url={{ permalink_u_r_l }};source=webclient" title="Share on Twitter" tabindex="0"><i class="zmdi zmdi-twitter"></i></a>
  </li>
  {% if product.featured_image or article.image  %}
  <li>
    <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ permalink_u_r_l }}&amp;media=http:{% if template contains 'product' %}{{ product | image_url: width: 1024, height: 1024 }}{% else %}{{ article | image_url: width: 1024, height: 1024 }}{% endif %}&amp;description={{ share_title }}" title="Share on Pinterest" tabindex="0"><i class="zmdi zmdi-pinterest"></i></a>
  </li>
  {% endif %}
  <li>
    <a target="_blank" href="//plus.google.com/share?url={{ permalink_u_r_l }}" title="Share on Google+" tabindex="0"><i class="zmdi zmdi-google-plus"></i></a>
  </li>
</ul>

</div>