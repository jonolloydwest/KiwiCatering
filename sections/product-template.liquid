<section class="product-details-page">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-12 col-12 product_details">
        <div class="product_detail_img">
          <!-- product_big_images start -->
          <div class="product_img_top">
            <button class="full-view"><i class="ti-fullscreen"></i></button>
            {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
            <img id="zoom_mw" class="product-zoom img-fluid" src="{{ featured_image | image_url: width: 2048 }}" alt="{{ featured_image.alt | escape }}" data-zoom-image="{{ featured_image | image_url: width: 2048 }}" width="{{ featured_image.width }}" height="{{ featured_image.height }}">
          </div>
          <!-- product_big_images end -->
          <!-- Start Small images -->
          <div class="owl-carousel owl-theme pro-detail-slider" id="pro-detail-slider">
            {% for image in product.images %}
            <div id="gallery_01" role="presentation" class="item {% if forloop.first %}active{% endif %}">
              <a class="product-single__thumbnail {% if forloop.first %}active{% endif %}" href="{{ image | image_url: width: 2048 }}" data-image="{{ image | image_url: width: 2048 }}" data-zoom-image="{{ image | image_url: width: 2048 }}" data-image-id="{{ image.id }}">
                <img class="img-fluid" src="{{ image | image_url: width: 200, height: 220, crop: 'center' }}" alt="{{ image.alt | escape }}" width="200" height="220">
              </a>
            </div>
            {% endfor %}
          </div>
          <!-- End Small images -->
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-12 col-12 product_details">
        <div class="product_details_info">
          <div class="pro-nprist">
            <div class="product-title">
              <h6>{{ product.title }}</h6>
              {%- if section.settings.nextprev_enable -%}
              <div class="product-nextprev">
                {% assign found_a_collection = false %}
                {% for c in product.collections %}
                {% if found_a_collection == false and c.handle != 'frontpage' and c.handle != 'all' and c.all_products_count > 1 %}
                {% assign found_a_collection = true %}
                {% assign collection = c %}
                {% endif %}
                {% endfor %}
                {% assign current = product.id %}
                {% if collection and collection.all_products_count >1 %}
                {% for product in collection.products %}
                {% assign id = product.id %}
                {% if id == current %}
                {% if forloop.last %}
                {% assign next = 0 %}
                {% else %}
                {% assign next = forloop.index %}
                {% endif %}
                {% assign prev = forloop.index |minus:2 %}
                {% endif %}
                {% endfor %}
                <!-- product_Prev_images start -->
                <div class="pro-prev">
                  <a class="prev-title" href="{{collection.products[prev].url}}">
                    {%- if settings.enable_rtl -%}
                    <i class="fa fa-angle-right"></i>{{ section.settings.product_prev_title }}
                    {%- else -%}
                    <i class="fa fa-angle-left"></i>{{ section.settings.product_prev_title }}
                    {%- endif -%}
                  </a>
                  <div class="img-prev">
                    <a class="next-prev-img" href="{{collection.products[prev].url}}">
                      {% assign prev_image = collection.products[prev].featured_image %}
                      <img class="img-fluid" src="{{ prev_image | image_url: width: 80, height: 100 }}" alt="{{ prev_image.alt | default: collection.products[prev].title }}" width="80" height="100">
                    </a>
                    <div class="next-prev-des">
                      <a class="pro-title" href="{{collection.products[prev].url}}">{{collection.products[prev].title}}</a>
                      {{collection.products[prev].price|money}}
                    </div>
                  </div>
                </div>
                <!-- product_Next_images end -->
                <div class="pro-next" >
                  <a class="next-title" href="{{collection.products[next].url}}">
                    {%- if settings.enable_rtl -%}
                    {{ section.settings.product_next_title }}<i class="fa fa-angle-left"></i>
                    {%- else -%}
                    {{ section.settings.product_next_title }}<i class="fa fa-angle-right"></i>
                    {%- endif -%}
                  </a>
                  <div class="img-next">
                    <a class="next-prev-img" href="{{collection.products[next].url}}">
                      {% assign next_image = collection.products[next].featured_image %}
                      <img class="img-fluid" src="{{ next_image | image_url: width: 80, height: 100 }}" alt="{{ next_image.alt | default: collection.products[next].title }}" width="80" height="100">
                    </a>
                    <div class="next-prev-des">
                      <a class="pro-title" href="{{collection.products[next].url}}">{{collection.products[next].title}}</a>
                      {{collection.products[next].price|money}}
                    </div>
                  </div>
                </div>
                {% else %}
                <a href="#"><i class="prev flaticon-left-arrow position-relative"></i></a>
                <a href="#"><i class="next flaticon-right-arrow position-relative"></i></a>
                {% endif %}
              </div>
              {%- endif -%}
            </div>
            <div class="pro-prlb{% if on_sale %} pro-sale{% endif %}">
              <div class="price-box" id="ProductPrice">
                <span class="new-price">{{ product.selected_or_first_available_variant.price | money }}</span>
                {%- if product.compare_at_price_max > product.price -%}
                <span class="old-price">{{ product.selected_or_first_available_variant.compare_at_price | money }}</span>
                {%- endif -%}
              </div>
            </div>
            {%- if section.settings.product_review_enable -%}
            <div class="product-ratting">
              <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
            </div>
            {%- endif -%}
            {%- if section.settings.product_inventory_enable -%}
            <div class="product-inventory {% if product.available %}unavailable{% endif %}">
              <h6>
                <span>{{ section.settings.availability_title }}</span>
                {% if product.variants.first.inventory_management == "shopify" and product.variants.first.inventory_quantity > 0 %}
                <span id="variant-inventory" class="in-stock text-success"><i class="fa fa-check"></i> {{ section.settings.in_stock_title }}</span>
                {% else %}
                <span id="variant-inventory" class="out-stock text-danger"><i class="fa fa-times"></i> {{ section.settings.out_of_stock_title }}</span>
                {% endif %}
              </h6>
            </div>
            {%- endif -%}
            {% if product.available %}
            {%- if section.settings.product_stock_enable -%}
            <div class="stock-inventory">
              {% if product.variants.first.inventory_management == "shopify" and product.variants.first.inventory_quantity > 0 %}
              <span>{{ section.settings.stock_label1 }}</span>
              <span class="available-stock">{{ product.variants.first.inventory_quantity }}</span>
              <span>{{ section.settings.stock_label2 }}</span>
              {% endif %}
            </div>
            {%- endif -%}
            {% endif %}
            {% if product.description contains '[product_timer]' and product.compare_at_price_max > product.price and product.available %}
            {% assign product_timer_first = product.description | split:'[/product_timer]' | first %}
            {% assign product_timer_final = product_timer_first | split:'[product_timer]' | last %}
            <div class="timer-section counter-event-{{product.id}}" id="counter-event" data-enddate="{{product_timer_final}}"></div>
            {% endif %}
            {%- if section.settings.short_description_enable -%}
            {%- if product.description contains '[short_description]' -%}
            {%- assign short_description_first = product.description | split:'[/short_description]' | first -%}
            {%- assign short_description_final = short_description_first | split:'[short_description]' | last -%}
            <div class="product-description">
              <p>{{ short_description_final }}</p>
            </div>
            {%- else -%}
            {{ product.description | strip_html | truncatewords: 35 | split: '[short_description]' | first | split: '[product_description]' | first | split: '[new_products]' | first | split: '[product_video]' | first | split: '[affiliate_link]' | first }}
            {%- endif -%}
            {%- endif -%}
          </div>

          <div class="pro-detail-action">

            <form action="{{ routes.cart_add_url }}" method="post" class="cart" enctype="multipart/form-data" id="add-item-form">
              {%- unless settings.product_variant_handle == 'product_variant_without_option' -%}
              {% render 'product-swatch-variant'%}
              {%- endunless -%}
              <div class="product-actions">
                <div class="product-quantity-action">
                  <h6>{{ settings.qty_title }}</h6>
                  {% render 'product-quantity'%}
                </div>


                <div class="pro-detail-button" >
                 <div class="add-to-cart-container">{% render 'product-cart-action' %}</div>
                  {%- if product.description contains '[affiliate_link]' -%}
                  {%- render 'affiliate-product-cart-action' -%}
                  {% endif %}
                </div>
              </div>
            </form>
          </div>
          <div class="pro-skss">
            {%- if current_variant.sku.size > 0 and section.settings.product_sku_enable -%}
            <div class="product-sku">
              <h6>{{ section.settings.product_sku_title }}</h6>
              <span class="variant-sku">{{ current_variant.sku }}</span>
            </div>
            {%- endif -%}
            {% if section.settings.product_cat_enable %}
            <div class="item-product-meta-info product-category-info">
              <h6>{{ section.settings.product_cat_title }}</h6>
              <ul>
                {% for collection in product.collections limit:3 %}
                <li>
                  <a href="{{collection.url}}">{{ collection.title }}{% unless forloop.last%},{% endunless %} </a>
                </li>
                {% endfor %}
              </ul>
            </div>
            {% endif %}
            {% if section.settings.payment_img_enable %}
            <div class="product-payment-image">
              {% render 'payment-icon'%}
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
