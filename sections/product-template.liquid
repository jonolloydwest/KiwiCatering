{% liquid
  assign title_lower = product.title | downcase
  assign compliance_required = false
  if title_lower contains 'cream charger'
    assign compliance_required = true
  endif
%}
<script>
  (function() {
    var sectionId = '{{ section.id }}';
    var selectorsInitialised = false;
    var complianceRequired = {{ compliance_required | json }};

    function withJQuery(callback) {
      if (typeof window.jQuery === 'undefined') {
        return false;
      }
      callback(window.jQuery);
      return true;
    }

    function initProductSlider($, $section) {
      var $slider = $section.find('#pro-detail-slider');
      if (!$slider.length || typeof $.fn.owlCarousel !== 'function' || $slider.hasClass('owl-loaded')) {
        return;
      }
      $slider.owlCarousel({
        loop: true,
        margin: 15,
        nav: true,
        navText: ['<i class="fa fa-angle-left"></i>', '<i class="fa fa-angle-right"></i>'],
        {%- if settings.enable_rtl -%}
        rtl: true,
        {%- endif -%}
        dots: false,
        responsive: {
          0: {
            items: 3
          },
          480: {
            items: 3
          },
          768: {
            items: 5
          },
          979: {
            items: 5
          },
          1199: {
            items: 5
          }
        }
      });
    }

    function initVariantSelectors($, $section) {
      if (selectorsInitialised || typeof Shopify === 'undefined' || typeof Shopify.OptionSelectors !== 'function') {
        return;
      }
      var selectId = 'productSelect-{{ product.id }}';
      new Shopify.OptionSelectors(selectId, {
        product: {{ product | json }},
        onVariantSelected: window.selectCallback,
        enableHistoryState: true
      });
      {% if product.options.size == 1 and product.options.first != 'Title' %}
      var product_select = selectId + '-option-0';
      $('#' + product_select).prepend('<label for="' + product_select + '">{{ product.options.first | escape }}</label>');
      {% endif %}
      {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
      $('.selector-wrapper').hide();
      {% endif %}
      selectorsInitialised = true;
    }

    function initZoom($, $section) {
      var $zoom = $section.find('#zoom_mw');
      if (!$zoom.length || typeof $.fn.elevateZoom !== 'function' || $zoom.data('elevateZoom')) {
        return;
      }
      $zoom.elevateZoom({
        gallery: 'gallery_01',
        zoomType: false,
        zoomEnabled: false,
        responsive: false,
        cursor: 'crosshair',
        galleryActiveClass: 'active',
        imageCrossfade: true,
        loadingIcon: ''
      });
      $zoom.on('click', function() {
        $zoom.data('elevateZoom');
        return false;
      });
    }

    function initProductSection() {
      withJQuery(function($) {
        var $section = $('#shopify-section-' + sectionId);
        if (!$section.length) {
          return;
        }
        initProductSlider($, $section);
        initVariantSelectors($, $section);
        initZoom($, $section);
      });
    }

    function scrubCompliance(root) {
      if (complianceRequired) {
        return;
      }
      var scope = root && root.nodeType === 1 ? root : document;
      var nodes = scope.querySelectorAll ? scope.querySelectorAll('.gpo-container') : [];
      nodes.forEach(function(node) {
        node.parentNode && node.parentNode.removeChild(node);
      });
    }

    document.addEventListener('DOMContentLoaded', initProductSection);
    document.addEventListener('shopify:section:load', function(event) {
      if (event.detail && event.detail.sectionId === sectionId) {
        selectorsInitialised = false;
        initProductSection();
        scrubCompliance(document);
      }
    });

    if (!complianceRequired) {
      document.addEventListener('DOMContentLoaded', function() {
        scrubCompliance(document);
        if (!('MutationObserver' in window)) {
          return;
        }
        var observer = new MutationObserver(function(mutations) {
          mutations.forEach(function(mutation) {
            mutation.addedNodes.forEach(function(node) {
              if (node.nodeType !== 1) {
                return;
              }
              if (node.classList && node.classList.contains('gpo-container')) {
                node.parentNode && node.parentNode.removeChild(node);
                return;
              }
              scrubCompliance(node);
            });
          });
        });
        observer.observe(document.body, { childList: true, subtree: true });
      });
    }

    window.instantBuy = function() {
      withJQuery(function($) {
        var formParams = $('form.cart').serialize();
        $.ajax({
          url: '/cart/add',
          type: 'post',
          data: formParams,
          success: function() {
            window.location.href = '/checkout';
          }
        });
      });
    };

    window.addToCart = function() {
      withJQuery(function($) {
        $('form.cart').submit();
      });
    };

    window.selectCallback = function(variant, selector) {
      if (typeof timber !== 'undefined' && typeof timber.productPage === 'function') {
        timber.productPage({
          money_format: "{{ shop.money_format }}",
          variant: variant,
          selector: selector
        });
      }
      withJQuery(function($) {
        if (variant && variant.available) {
          var form = $('#' + selector.domIdPrefix).closest('form');
          for (var i = 0, size = variant.options.size; i < size; i++) {
            var val = variant.options[i].replace(/'/g, '&#039;');
            var radioButton = form.find(".swatch[data-option-index='" + i + "'] :radio[value='" + val + "']");
            if (radioButton.length) {
              radioButton.get(0).checked = true;
            }
          }
          $('.variant-sku').text(variant.sku);
        } else {
          $('.variant-sku').empty();
        }

        if (variant) {
          if (variant.price < variant.compare_at_price) {
            $('#ProductPrice').html('<span class="new-price">' + Shopify.formatMoney(variant.price, "{{ shop.money_format }}") + '</span><span class="old-price">' + Shopify.formatMoney(variant.compare_at_price, "{{ shop.money_format }}") + '</span>');
          } else {
            $('#ProductPrice').html('<span class="new-price">' + Shopify.formatMoney(variant.price, "{{ shop.money_format }}") + '</span>');
          }
        }

        if (variant && variant.featured_image) {
