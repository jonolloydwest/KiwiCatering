<section class="payment-policy">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="section-capture">
          <div class="section-title">
          {% if section.settings.pay_policy_title != '' %}
          <h2>
            {{ section.settings.pay_policy_title }}
          </h2>
          {% endif %}
        </div>
        </div>
        <div class="que-ans">
          <ul>
            {% for block in section.blocks %}
            <li>
              <h6 class="question">{{ block.settings.pay_policy_que }}</h6>
              <div class="ans-accordian">
                <p>{{ block.settings.pay_policy_ans1 }}</p>
              </div>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Payment Policy",
  "settings": [
    {
      "type" : "header",
      "content" : "Section Padding"
    },
    {
      "type" : "paragraph",
      "content" : "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type" : "paragraph",
      "content" : "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "section_padding_top_ipad",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "section_padding_bottom_ipad",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type" : "paragraph",
      "content" : "Mobile"
    },
    {
      "type": "range",
      "id": "section_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "section_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
  {
    "type": "header",
    "content": "Page Title"
  },
  {
    "type": "text",
    "id": "pay_policy_title",
    "label": "Title",
    "default": "Payment Policy"
  }
  ],
  "blocks":[
  {
    "type": "payment-policy",
    "name": "Payment Policy",
    "settings": [
    {
      "type": "text",
      "id": "pay_policy_que",
      "label": "Question",
      "info": "Type Here For Question?",
      "default": "Type In SideBox For Question?"
    },
    {
      "type": "textarea",
      "id": "pay_policy_ans1",
      "label": "Answer1",
      "info": "Type Here For Answer",
      "default": "Type In SideBox For Answer."
    }
    ]
  }
  ]
}
{% endschema %}
<style type="text/css">
  .payment-policy {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }
  @media (max-width: 1199px) {
    .payment-policy {
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 767px) {
    .payment-policy {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  .payment-policy .que-ans ul {
    display: flex;
    flex-wrap: wrap;
    {%- if settings.enable_rtl -%}
    margin-right: -30px;
    {%- else -%}
    margin-left: -30px;
    {%- endif -%}
    
    margin-top: -30px;
  }
  .payment-policy .que-ans ul li{
    padding: 30px;
    width: calc(50% - 30px);
    margin-top: 30px;
    {%- if settings.enable_rtl -%}
    margin-right: 30px;
    {%- else -%}
    margin-left: 30px;
    {%- endif -%}
    box-shadow: 0 0 20px rgb(0 0 0 / 8%);
  }

  .payment-policy .que-ans ul li h6{
    font-size: 16px;
    line-height: 1;
  }
  .payment-policy .que-ans ul li p{
    padding-top: 15px;
    color: #666;
  }
  @media(max-width: 991px){
    .payment-policy .que-ans ul li{
      width: calc(100% - 30px);
    }
  }
  @media(max-width: 767px){
    .payment-policy .que-ans ul {
      {%- if settings.enable_rtl -%}
      margin-right: -15px;
      {%- else -%}
      margin-left: -15px;
      {%- endif -%}
      margin-top: -15px;
    }
    .payment-policy .que-ans ul li{
      width: calc(100% - 15px);
      padding: 15px;
      margin-top: 15px;
      {%- if settings.enable_rtl -%}
      margin-right: 15px;
      {%- else -%}
      margin-left: 15px;
      {%- endif -%}
    }
  }
</style>