{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
    }
  }
{%- endstyle -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    margin-top: 0;
  }
{%- endstyle -%}
{%- endif -%}

{%- liquid
  assign content_width_setting = section.settings.content_width | default: 'default'
  assign hero_aspect_ratio = 1.78
  if section.settings.image != blank and section.settings.image.aspect_ratio
    assign hero_aspect_ratio = section.settings.image.aspect_ratio
  endif
  if hero_aspect_ratio <= 0
    assign hero_aspect_ratio = 1.78
  endif
-%}
{%- assign banner_home_class = '' -%}
{%- if request.page_type == 'index' -%}
  {%- assign banner_home_class = 'banner--dev-home' -%}
{%- endif -%}
{%- style -%}
  #Banner-{{ section.id }}::after,
  #Banner-{{ section.id }} .banner__media::after {
    content: none;
  }

  #Banner-{{ section.id }}.banner--dev-home .banner__overlay,
  #Banner-{{ section.id }}.banner--dev-home .banner__content-inner::before {
    display: none;
  }

  #Banner-{{ section.id }}.banner--dev-home .banner__content {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: clamp(1.6rem, 5vw, 3.2rem) clamp(1.6rem, 6vw, 3.2rem) clamp(2.4rem, 6vw, 4rem);
  }

  #Banner-{{ section.id }}.banner--dev-home .banner__content-inner {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
  }

  #Banner-{{ section.id }}.banner--dev-home .banner__box {
    display: flex;
    flex-direction: column;
    gap: var(--space-brand-sm, 1.6rem);
    align-items: center;
    justify-content: flex-end;
    text-align: center;
    width: min(100%, 48rem);
  }

  #Banner-{{ section.id }}.banner--dev-home .banner__hero {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-brand-sm, 1.6rem);
    align-items: center;
    justify-content: center;
  }

  #Banner-{{ section.id }}.banner--dev-home .banner__buttons {
    display: inline-flex;
    gap: var(--space-brand-sm, 1.6rem);
    justify-content: center;
  }

  #Banner-{{ section.id }}.banner--dev-home .banner__buttons .button {
    min-width: 14rem;
  }

  {%- case content_width_setting -%}
    {%- when 'narrow' -%}
      #Banner-{{ section.id }}.banner--dev-home .banner__box {
        width: min(100%, 38rem);
      }
    {%- when 'wide' -%}
      #Banner-{{ section.id }}.banner--dev-home .banner__box {
        width: min(100%, 72rem);
      }
    {%- when 'full' -%}
      #Banner-{{ section.id }}.banner--dev-home .banner__box {
        width: 100%;
      }
  {%- endcase -%}

  @media screen and (max-width: 767px) {
    #Banner-{{ section.id }}.banner--dev-home .banner__content {
      padding: clamp(1.6rem, 6vw, 3.2rem);
    }

    #Banner-{{ section.id }}.banner--dev-home .banner__box,
    #Banner-{{ section.id }}.banner--dev-home .banner__hero {
      width: 100%;
    }
  }

  @media screen and (max-width: 600px) {
    #Banner-{{ section.id }}.banner--dev-home .banner__content {
      min-height: calc(100vw / {{ hero_aspect_ratio | round: 4 }});
    }
  }
{%- endstyle -%}


{%- liquid
  assign full_width = '100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

  if section.settings.image_behavior == 'ambient'
    assign half_width = '60vw'
    assign full_width = '120vw'
    assign stacked_sizes = '(min-width: 750px) 60vw, 120vw'
    assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
  elsif section.settings.image_behavior == 'fixed' or section.settings.image_behavior == 'zoom-in'
    assign half_width = '100vw'
    assign stacked_sizes = '100vw'
  else
    assign half_width = '50vw'
    assign stacked_sizes = '(min-width: 750px) 50vw, 100vw'
  endif
  assign fetch_priority = 'auto'
  assign banner_loading = 'lazy'
  assign banner_image_alt = section.settings.image.alt
  assign banner_secondary_alt = section.settings.image_2.alt
  assign banner_heading_block = section.blocks | where: 'type', 'heading' | first
  assign banner_heading_text = ''
  if banner_heading_block and banner_heading_block.settings.heading != blank
    assign banner_heading_text = banner_heading_block.settings.heading | strip_html
  endif
  if banner_image_alt == blank
    assign banner_image_alt = banner_heading_text
  endif
  if banner_image_alt == blank
    assign banner_image_alt = shop.name
  endif
  if banner_secondary_alt == blank
    assign banner_secondary_alt = banner_heading_text
  endif
  if banner_secondary_alt == blank
    assign banner_secondary_alt = shop.name
  endif
  if request.page_type == 'index' and section.index <= 2
    assign fetch_priority = 'high'
    assign banner_loading = 'eager'
  elsif section.index == 1
    assign fetch_priority = 'high'
    assign banner_loading = 'eager'
  endif
-%}

<div
  id="Banner-{{ section.id }}"
  class="banner banner--content-align-{{ section.settings.desktop_content_alignment }} banner--content-align-mobile-{{ section.settings.mobile_content_alignment }} banner--{{ section.settings.image_height }}{% if section.settings.stack_images_on_mobile and section.settings.image != blank and section.settings.image_2 != blank %} banner--stacked{% endif %}{% if section.settings.image_height == 'adapt' and section.settings.image != blank %} banner--adapt{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %}{% if section.settings.full_width_content %} banner--full-width-content{% endif %}{% if banner_home_class != blank %} {{ banner_home_class }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}{% if section.settings.custom_css_class != blank %} {{ section.settings.custom_css_class | strip | escape }}{% endif %}"
>
  <div class="banner__overlay" aria-hidden="true"></div>
  {%- if section.settings.image != blank -%}
    <div class="banner__media media{% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}{% if section.settings.image_2 != blank %} banner__media-half{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        if section.settings.image_2 != blank
          assign image_class = 'banner__media-image-half'
        endif
        if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
          assign sizes = stacked_sizes
        elsif section.settings.image_2 != blank
          assign sizes = half_width
        else
          assign sizes = full_width
        endif
      -%}
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          width: section.settings.image.width,
          height: image_height,
          class: image_class,
          sizes: sizes,
          widths: widths,
          loading: banner_loading,
          fetchpriority: fetch_priority,
          alt: banner_image_alt | escape
      }}
    </div>
  {%- elsif section.settings.image_2 == blank -%}
    <div class="banner__media media{% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}{% if section.settings.image_2 != blank %} banner__media-half{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      <img
        src="https://cdn.shopify.com/s/files/1/0523/6572/1788/files/Natures_Factory..png?v=1727833832"
        alt="{{ section.settings.fallback_alt_text | default: shop.name | escape }}"
        loading="{{ banner_loading }}"
        fetchpriority="{{ fetch_priority }}"
        width="1920"
        height="850"
        class="banner__media-default"
      >
    </div>
  {%- endif -%}
  {%- if section.settings.image_2 != blank -%}
    <div class="banner__media media{% if section.settings.image != blank %} banner__media-half{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {%- liquid
        assign image_height_2 = section.settings.image_2.width | divided_by: section.settings.image_2.aspect_ratio
        if section.settings.image != blank
          assign image_class_2 = 'banner__media-image-half'
        endif
        if section.settings.image != blank and section.settings.stack_images_on_mobile
          assign sizes = stacked_sizes
        elsif section.settings.image_2 != blank
          assign sizes = half_width
        else
          assign sizes = full_width
        endif
      -%}
      {{
        section.settings.image_2
        | image_url: width: 3840
        | image_tag:
          width: section.settings.image_2.width,
          height: image_height_2,
          class: image_class_2,
          sizes: sizes,
          widths: widths,
          loading: 'lazy',
          fetchpriority: 'auto',
          alt: banner_secondary_alt | escape
      }}
    </div>
  {%- endif -%}
  <div class="banner__content banner__content--{{ section.settings.desktop_content_position }}{% unless section.settings.full_width_content %} page-width{% endunless %}{% if section.settings.full_width_content %} banner__content--full-bleed{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="banner__content-inner{% if content_width_setting != 'default' %} banner__content-inner--{{ content_width_setting }}{% endif %}" data-banner-content="inner">
      <div class="banner__box content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }} gradient legacy-hero {{ section.settings.text_block_style }}" data-banner-box>
        <div class="banner__hero">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            {%- if block.settings.heading != blank -%}
              <h2
                class="banner__heading inline-richtext"
                data-banner-block="heading"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </h2>
            {%- endif -%}
          {%- when 'text' -%}
            {%- if block.settings.text != blank -%}
              <div class="banner__text rte {{ block.settings.text_style }} legacy-hero__text" data-banner-block="text" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- endif -%}
          {%- when 'buttons' -%}
            <div
              class="banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %}"
              data-banner-block="buttons"
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.button_label_1 != blank -%}
                <a
                  {% if block.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_1 }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                >
                  {{- block.settings.button_label_1 | escape -}}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a
                  {% if block.settings.button_link_2 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_2 }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                >
                  {{- block.settings.button_label_2 | escape -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

