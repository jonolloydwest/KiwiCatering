<section class="page-not-found section-ptb">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="search-error-wrapper">
          <div class="img-text">
            <img src="{% if section.settings.opps_404 %}{{ section.settings.opps_404 | img_url: '626x245' }}{% else %}https://dummyimage.com/626x245/f7f7f7/999999{% endif %}" alt="" />
          </div>
          {% if section.settings.page_button_title !='' %}
          <a class="btn btn-style" href="{{ section.settings.button_url }}" data-text="{{ section.settings.page_button_title }}">
            <span>{{ section.settings.page_button_title }}</span>
            <i class="ti-home"></i>
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .page-not-found .search-error-wrapper{
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .page-not-found .search-error-wrapper a {
    margin-top: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .page-not-found .search-error-wrapper a i{
    font-size: 14px;
    {%- if section.settings.enable_rtl -%}
    margin-right: 5px;
    {%- else -%}
    margin-left: 5px;
    {%- endif -%}
  }
  @media (max-width: 767px) {
    .page-not-found .search-error-wrapper a{
      margin-top: 15px;
    }
  }
</style>
{% schema %}
{
  "name": "Page Not Found",
  "settings": [
      {
        "type": "image_picker",
        "id": "opps_404",
        "label": "Image",
        "info": "Recommended Size: 512px X 512px"
      },
      {
        "type": "text",
        "id": "page_button_title",
        "label": "Button Title",
        "default": "Back to homepage"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL",
        "default": "\/"
      }
    
  ]
}
{% endschema %}