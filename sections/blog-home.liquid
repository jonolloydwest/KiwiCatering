<section class="blog-wrap">
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-12">
        {% if section.settings.section_title !='' %}
        <div class="section-capture">
          <div class="section-title">
            {% if section.settings.section_title !='' %}
            <h2>
              {{ section.settings.section_title }}
            </h2>
            {% endif %}
          </div>
        </div>
        {% endif %}
        {% assign blog_handle = 'news' %}
        {% unless blogs[blog_handle].empty? or blogs[blog_handle].articles.size == 0 %}
        <div class="blog-slider simple-slider" data-slider data-slider-gap="30" data-slider-visible="3" data-slider-visible-md="2" data-slider-visible-sm="1">
          <button type="button" class="slider-nav-btn slider-nav-btn--prev" data-slider-prev aria-label="Previous blog posts">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
          </button>
          <div class="blog-slider__track simple-slider__track" data-slider-track>
          {% for article in blogs[blog_handle].articles %}
          <div class="item">
            {% render 'blog-grid-item'%}
          </div>
          {% endfor %}
          </div>
          <button type="button" class="slider-nav-btn slider-nav-btn--next" data-slider-next aria-label="Next blog posts">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
          </button>
        </div>
        {% endunless %}
        {% if section.settings.blog_view_btn_enable %}
        <div class="blog-view-wrap">
          <a href="{{ section.settings.blog_view_btn_url }}" class="btn btn-style">{{ section.settings.blog_view_btn }}</a>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Home Blog",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type" : "paragraph",
      "content" : "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "blog_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "blog_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type" : "paragraph",
      "content" : "tablet"
    },
    {
      "type": "range",
      "id": "blog_padding_top_lg",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "blog_padding_bottom_lg",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type" : "paragraph",
      "content" : "Mobile"
    },
    {
      "type": "range",
      "id": "blog_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "blog_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type" : "header",
      "content" : "Section Background Color"
    },
    {
      "type" : "color",
      "id" : "blog_bgcolor",
      "label" : "Background Color",
      "default" : "#fff"
    },
    {
      "type" : "checkbox",
      "id" : "blog_check",
      "label" : "With Backgorund",
      "default" : true
    },
    {
      "type" : "header",
      "content" : "Section Title"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Recent News"
    },
    {
      "type" : "header",
      "content" : "View All Button"
    },
    {
      "type": "text",
      "id": "blog_view_btn",
      "label": "Button Text",
      "default": "View All News"
    },
    {
      "type": "checkbox",
      "id": "blog_view_btn_enable",
      "label": "Show View All Button",
      "default": false
    },
    {
      "type": "url",
      "id": "blog_view_btn_url",
      "label": "Button URL"
    },
    {
      "type": "checkbox",
      "id": "section_bg_enable",
      "label": "Section Background Image",
      "default": true
    },
    {
	    "type": "image_picker",
	    "id": "section_bg_img",
	    "label": "Image",
	    "info": "Recommended Size: 1920px x 850px"
	}
  ],
  "presets": [
    {
      "name": "Home Blog",
      "category": "Blog Post"
    }
  ]
}
{% endschema %}
{% stylesheet %}
{% endstylesheet %}
{% javascript %}
{% endjavascript %}
<style>
  .blog-wrap {
    padding-top:{{ section.settings.blog_padding_top }}px;
    padding-bottom:{{ section.settings.blog_padding_bottom }}px;
    {% if section.settings.blog_check %}
    background-color: {{ section.settings.blog_bgcolor }};
    {% endif %}
    {% if section.settings.section_bg_enable %}
    background-image: url({% if section.settings.section_bg_img %}{{ section.settings.section_bg_img | image_url: width: 2048 }}{% else %}{{ 'placeholder-image.svg' | asset_url }}{% endif %});
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    {% endif %}
  }
  @media (max-width: 1199px) {
    .blog-wrap {
      padding-top:{{ section.settings.blog_padding_top_lg }}px;
      padding-bottom:{{ section.settings.blog_padding_bottom_lg }}px;
    }
  }
  @media (max-width: 767px) {
    .blog-wrap {
      padding-top:{{ section.settings.blog_padding_top_xs }}px;
      padding-bottom:{{ section.settings.blog_padding_bottom_xs }}px;
    }
  }
  {% if section.settings.blog_view_btn_enable %}
  .blog-wrap .blog-view-wrap {
    text-align: center;
    margin-top: 30px;
  }
  @media (max-width: 767px){
    .blog-wrap .blog-view-wrap {
      margin-top: 20px;
    }
  }
  {% endif %}
</style>
