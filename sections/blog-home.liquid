    padding-top:{{ section.settings.blog_padding_top }}px;
    padding-bottom:{{ section.settings.blog_padding_bottom }}px;
    {% if section.settings.blog_check %}
    background-color: {{ section.settings.blog_bgcolor }};
    {% endif %}
    {% if section.settings.section_bg_enable %}
    background-image: url({% if section.settings.section_bg_img %}{{ section.settings.section_bg_img | img_url: 'master' }}{% else %}https://dummyimage.com/1920x850/f7f7f7/999999{% endif %});
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    {% endif %}
