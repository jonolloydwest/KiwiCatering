<section class="customer-page section-ptb">
  <div class="container">
    <div class="row">
      <div class="col">
        {% if customer %}
        <div class="wishlist-page">
          <div class="wishlist-grid">
            <div class="wish-wrap">
              <div class="wishlist-title">
                <h6>{{ section.settings.wish_title }}</h6>
                <span class="wish-count">
                  <span class="wishlist-counter">{{ wishlist.count }}</span>
                  <span class="wish-item-title">{{ section.settings.wish_item_title }}</span>
                </span>
              </div>
              {% paginate collections.all.products by 9999 %}
              {% for product in collections.all.products %}
              <form action="/cart/add" method="post" class="cart" data-product-handle="{{ product.handle }}" enctype="multipart/form-data" id="add-item-form-{{ product.id }}">
              {%- assign variant = product.selected_or_first_available_variant -%}
              {%- if product.available -%}
              {%- assign func = variant.id -%}
              {% else %}
              {%- assign func = product.id -%}
              {%- endif -%}
              <input name="id" id="id" value="{{ func }}" type="hidden">
              <input value="1" type="hidden" name="quantity" min="1">
                <ul class="wishlist-tile-container" data-product-id="{{ product.id }}" data-product-handle="{{ product.handle }}">
                  <li class="wishlist-info">
                    <div class="item-img">
                      <a href="{{ product.url }}">
                        <img class="img-fluid" src="{{ product.featured_image | product_img_url: '120x120', crop: 'center' }}" alt="{{ product.title | escape }}" />
                      </a>
                    </div>
                    <div class="item-title">
                      <a href="{{ product.url }}" title="{{ product.title }}">{{ product.title | truncate: 80 }}</a>
                    </div>
                  </li>
                  <li class="item-add-remove">
                    <div class="item-add">
                      {% if product.available %}
                      <a href="javascript:void(0);" onclick="Shopify.addItem({{ product.selected_or_first_available_variant.id }} , 1); return false;" class="add-to-cart ajax-spin-cart">
                        <span>
                          <span class="cart-title">{{ section.settings.wish_cart_title }}</span>
                          <span class="cart-loading animated infinite rotateOut">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-loader"><line x1="12" y1="2" x2="12" y2="6"></line><line x1="12" y1="18" x2="12" y2="22"></line><line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line><line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line><line x1="2" y1="12" x2="6" y2="12"></line><line x1="18" y1="12" x2="22" y2="12"></line><line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line><line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line></svg>
                          </span>
                          <span class="cart-added">{{ section.settings.wish_cart_add }}</span>
                          <span class="cart-unavailable"><i class="{{ section.settings.wish_cart_unvlbe }}"></i></span>
                        </span>
                      </a>
                      {% else %}
                      <a class="disabled-add-to-cart out-of-stock text-danger" href="javascript:void(0)" title="out of stock">
                        <span class="cart-title">{{ section.settings.wish_cart_stock_out }}</span>
                      </a>
                      {% endif %}
                    </div>
                    <div class="item-buy">
                      <a href="javascript:void(0);"  class="btn-direct-checkout" id="btn-direct-checkout-{{ product.id }}">
                        <span>{{ section.settings.wish_buy_now }}</span>
                      </a>
                    </div>
                  </li>
                  <li class="item-price">
                    <span class="product-price">
                      {% if product.compare_at_price > product.price %}
                      <span class="price-sale">{{ product.price | money }}</span>
                      <span class="compare-price">{{ product.compare_at_price | money }}</span>
                      {% else %}
                      <span class="pro-price">{{ product.price | money }}</span>
                      {% endif %}
                    </span>
                    <span class="item-remove">
                      <a class="action-wishlist wishlist-btn text-danger" onclick="reloadPage();"  href="javascript:void(0)" data-product-handle="{{ product.handle }}">
                        <span class="remove-wishlist"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></span>
                      </a>
                    </span>
                  </li>
                </ul>
                <script>
              $("#btn-direct-checkout-{{ product.id }}").click(function(){
                
                var $ = jQuery;
                var form = $(this).parents('form#add-item-form-{{ product.id }}');
              //console.log(form);
              var formParams = form.serialize();
              //console.log(formParams);
              $.ajax({
                url: "/cart/add",
                type: "post",
                data: formParams,
                success: function(){
                  window.location.href = "/checkout";
                },
                error: function(){
                }
              });
            });
          </script>
              </form>
              {% endfor %}
              {% endpaginate %}
              <div class="wishlist-buttons">
                <a class="btn btn-style2" href="/collections/all">{{ section.settings.wish_cart_conti }}</a>
                <a class="btn btn-style2" href="javascript:void(0)" id="remove-done">{{ section.settings.wish_cart_clear }}</a>
              </div>
            </div>
          </div>
          <div class="wishlist-grid-empty-list">
            <div class="empty-list-info">
            <div class="section-title">
              <h2>
                <lebel>{{ settings.wishlist_empty_title1 }}</lebel>
                <lebel>{{ settings.wishlist_empty_title2}}</lebel>
                <lebel>{{ settings.wishlist_empty_title3 }}</lebel>
                <lebel>{{ settings.wishlist_empty_title4 }}</lebel>
              </h2>
              <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
            </div>
            </div>
          </div>
          <!-- Loader -->
          <div class="wishlist-loader" style="display: none;">
            <p class="wishlist-loader--text">Loading...</p>
          </div>
        </div>
        {% else %}
        <div class="login-wishlist">
          <ul>
            <li>
              <span>{{ settings.login_request_title }}</span>
              {{ 'layout.customer.log_in' | t | customer_login_link }}
            </li>
            <li>
              <span>{{ settings.dnt_acc_title }}</span>
              {{ 'layout.customer.create_account' | t | customer_register_link }}
            </li>
          </ul>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Wishlist Page",
  "settings": [
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "wish_title",
      "label": "Title",
      "default": "My Wishlist:"
    },
    {
      "type": "text",
      "id": "wish_item_title",
      "label": "Title",
      "default": "Item"
    },
    {
      "type": "header",
      "content": "Cart Button Label"
    },
    {
      "type": "text",
      "id": "wish_cart_title",
      "label": "Title",
      "default": "Add to cart"
    },
    {
      "type": "text",
      "id": "wish_cart_add",
      "label": "Title",
      "default": "Done!"
    },
    {
      "type": "text",
      "id": "wish_cart_unvlbe",
      "label": "Title",
      "default": "ion-android-alert"
    },
    {
      "type": "text",
      "id": "wish_cart_stock_out",
      "label": "Title",
      "default": "Out Of Stock"
    },
    {
      "type": "text",
      "id": "wish_buy_now",
      "label": "Title",
      "default": "Buy Now"
    },
    {
      "type": "header",
      "content": "Wishlist Button Action"
    },
    {
      "type": "text",
      "id": "wish_cart_conti",
      "label": "Title",
      "default": "Continue Shopping"
    },
    {
      "type": "text",
      "id": "wish_cart_clear",
      "label": "Title",
      "default": "Clear Wishlist"
    }
  ]
}
{% endschema %}
<style>
  .wishlist-page .wishlist-title {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 0;
    border-top: 1px solid #e2e2e2;
    border-bottom: 1px solid #e2e2e2;
  }
  .wishlist-page .wishlist-title h6 {
    font-size: 16px;
    text-transform: capitalize;
    line-height: 1;
  }
  .wishlist-page .wishlist-title span.wish-count {
    color: {{ settings.color_primary }};
    border-bottom: 1px solid {{ settings.color_primary }};
  }
  /* wishlist-item css */
  .wishlist-page ul {
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 15px 0;
    border-bottom: 1px solid #e2e2e2;
  }
  .wishlist-page ul li.item-add-remove,
  .wishlist-page ul li.item-price {
    width: 25%;
  }
  .wishlist-page ul li.wishlist-info {
    width: 50%;
  }
  @media (max-width: 991px) {
    .wishlist-page ul li.wishlist-info {
      width: 75%;
    }
    .wishlist-page ul li.item-add-remove {
      width: 100%;
      order: 1;
    }
  }
  @media (max-width: 767px) {
    .wishlist-page ul li.wishlist-info,
    .wishlist-page ul li.item-price {
      width: 100%;
    }
    .wishlist-page ul li.item-add-remove {
      order: 0;
    }
  }
  /* wishlist image css */
  .wishlist-page ul li.wishlist-info {
    display: flex;
    align-items: center;
  }
  .wishlist-page ul li.wishlist-info .item-img {
    width: 120px;
  }
  .wishlist-page ul li.wishlist-info .item-title {
    width: calc(100% - 120px);
    padding: 0 15px;
  }
  .wishlist-page ul li.wishlist-info .item-title a {
    display: block;
    text-transform: capitalize;
    font-weight: 600;
  }
  .wishlist-page ul li.wishlist-info:hover .item-title a {
    color: {{ settings.color_primary }};
  }
  @media (max-width: 991px) {}
  /* wishlist add-buy-out css */
  .wishlist-page ul li.item-add-remove {
    text-align: center;
  }
  .wishlist-page ul li.item-add-remove .item-add a.add-to-cart,
  .wishlist-page ul li.item-add-remove .item-buy a {
    color: {{ settings.color_primary }};
  }
  .wishlist-page ul li.item-add-remove .item-add a.add-to-cart span.cart-title,
  .wishlist-page ul li.item-add-remove .item-buy a span {
    text-decoration: underline;
  }
  .wishlist-page ul li.item-add-remove .item-add a.out-of-stock:hover {
    cursor: not-allowed;
  }
  .wishlist-page ul li.item-add-remove .item-buy {
    margin-top: 15px;
  }
  @media (max-width: 991px) {
    .wishlist-page ul li.item-add-remove {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 15px;
      {%- if settings.enable_rtl -%}
      text-align: right;
      {%- else -%}
      text-align: left;
      {%- endif -%}
    }
    .wishlist-page ul li.item-add-remove .item-buy {
      margin-top: 0px;
    }
  }
  /* wishlist price css */
  .wishlist-page ul li.item-price {
    {%- if settings.enable_rtl -%}
    text-align: left;
    {%- else -%}
    text-align: right;
    {%- endif -%}
  }
  .wishlist-page ul li.item-price .product-price {
    display: block;
  }
  .wishlist-page ul li.item-price .product-price span {
    display: block;
  }
  .wishlist-page ul li.item-price .product-price span.price-sale,
  .wishlist-page ul li.item-price .product-price span.pro-price {
    font-weight: 600;
  }
  .wishlist-page ul li.item-price .product-price .compare-price {
    color: #999;
    font-size: 12px;
    text-decoration: line-through;
  }
  .wishlist-page ul li.item-price .item-remove{
    margin-top: 10px;
  }
  .wishlist-page ul li.item-price .item-remove a span {
    line-height: 0;
  }
  .wishlist-page ul li.item-price .item-remove a {
    font-size: 20px;
  }
  @media (max-width: 767px) {
    .wishlist-page ul li.item-price {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 10px;
      {%- if settings.enable_rtl -%}
      text-align: right;
      {%- else -%}
      text-align: left;
      {%- endif -%}
    }
  }
  /* wishlist button css */
  .wishlist-page .wishlist-buttons {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 0;
    border-bottom: 1px solid #e2e2e2;
  }

  /* wishlist empty css */
  .wishlist-page .wishlist-grid-empty-list .section-title h2 lebel:nth-child(even) {
    color: {{ settings.color_primary }};
  }
  .wishlist-page .wishlist-grid-empty-list .section-title p a {
    color: {{ settings.color_primary }};
    font-weight: 600;
  }

  /* wishlist login css */
  .login-wishlist ul {
    max-width: 500px;
    margin: 0 auto;
    text-align: center;
  }
  .login-wishlist ul li {
    margin-top: 30px;
  }
  .login-wishlist ul li:first-child {
    margin-top: 0px;
  }
  .login-wishlist ul li span {
    display: block;
    font-weight: 600;
  }
  .login-wishlist ul li a {
    display: block;
    color: {{ settings.color_primary }};
    margin-top: 15px;
    text-decoration: underline;
  }
  @media (max-width: 767px) {
    .login-wishlist ul li {
      margin-top: 20px;
    }

    .wishlist-page .wishlist-buttons{
      flex-direction: column;
    }
    .wishlist-page .wishlist-buttons a:first-child{
      margin-top: 0;
    }
    .wishlist-page .wishlist-buttons a{
      width: 100%;
      margin-top: 5px;
    }
  }
</style>