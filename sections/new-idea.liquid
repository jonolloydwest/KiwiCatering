<section class="about-counter" {% if section.settings.counter_banner_enable %}style="background-image: url('{% if section.settings.counter_banner %}{{ section.settings.counter_banner | image_url: width: 2048 }}{% else %}{{ 'placeholder-image.svg' | asset_url }}{% endif %}');"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="business-counter">
          <ul class="single-count">
          {% for block in section.blocks %}
          <li class="count-wrap">
            <div class="count-title">
              {% if block.settings.counter_number != '' %}
              <h2 class="count">{{ block.settings.counter_number }}</h2>
              {% endif %}
              {% if block.settings.counter_title != '' %}
              <span>{{ block.settings.counter_title }}</span>
              {% endif %}
            </div>
          </li>
          <style type="text/css">
          {% if block.settings.counter_main_text_color %}
          .business-counter ul.single-count li.count-wrap .count-title h2{
          color: {{ block.settings.counter_main_text_color }};
          }
          {% endif %}
          {% if block.settings.counter_text_color %}
          .business-counter ul.single-count li.count-wrap .count-title span{
          color: {{ block.settings.counter_text_color }};
          }
          {% endif %}
          </style>
          {% endfor %}
        </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function(){
    $('.count').counterUp({
      delay: 10,
      time: 1000
    });
  });
</script>
