<style>
  .about-counter{
    border: 1px solid #e2e2e2;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;

    {% if section.settings.counter_banner_enable %}
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    {% if section.settings.counter_banner_bgpos_enable %}
    background-attachment: fixed;
    {% endif %}
    position: relative;
    {% else %}
    background-color: {{ section.settings.newidea_bgcolor }};
    {% endif %}
  }
  .about-counter:after{
    content: "";
    position: absolute;
    top: 0;
    {%- if settings.enable_rtl -%}
    right: 0;
    {%- else -%}
    left: 0;
    {%- endif -%}
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.counter_banner_overlay_bgcolor }};
    opacity: {{ section.settings.counter_banner_overlay_bgcolor_opacity }};
  }
  @media (max-width: 1199px){
    .about-counter{
      padding-top: {{ section.settings.section_padding_top_lg }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_lg }}px;
    }
  }
  @media (max-width: 767px){
    .about-counter{
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }
  
  /* textcontent */
  .business-counter{
    position: relative;
    text-align: center;
    z-index: 1;
  }
  .business-counter ul.single-count{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .business-counter ul.single-count li.count-wrap {
    width: 25%;
  }
  .business-counter ul.single-count li.count-wrap .count-title h2{
    font-size: 40px;
    text-transform: capitalize;
    
  }
  .business-counter ul.single-count li.count-wrap .count-title span{
    margin-top: 21px;
  }
  @media(max-width: 991px){
    .business-counter ul.single-count li.count-wrap .count-title h2{
      font-size: 30px;
    }
  }
  @media(max-width: 767px){
    .business-counter ul.single-count li.count-wrap .count-title h2{
      font-size: 24px;
    }
    .business-counter ul.single-count{
      margin-top: -30px;
    }
    .business-counter ul.single-count li.count-wrap {
      margin-top: 30px;
      width: 50%;
    }
  }

</style>