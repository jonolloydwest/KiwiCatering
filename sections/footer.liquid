{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .footer--legacy .footer__content-top--legacy {
    position: relative;
  }

  .footer--legacy .legacy-footer__trust {
    margin-top: 2.7rem;
    text-align: center;
    max-width: 60rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media screen and (min-width: 750px) {
    .footer--legacy .legacy-footer__trust {
      margin-top: 3.5rem;
    }
  }
{%- endstyle -%}

{%- assign footer_home_class = '' -%}
{%- if request.page_type == 'index' -%}
  {%- assign footer_home_class = 'footer--dev-home' -%}
{%- endif -%}

<footer class="footer footer--legacy color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding{% if footer_home_class != blank %} {{ footer_home_class }}{% endif %}">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif

    if settings.brand_image == blank and settings.brand_headline == blank and settings.brand_description == blank
      assign brand_empty = true
    endif

    if section.blocks.size == 1 and section.blocks[0].type == 'brand_information' and brand_empty and has_social_icons == false and section.settings.newsletter_enable == false and section.settings.enable_follow_on_shop == false
      assign only_empty_brand = true
    endif
  -%}
  {%- if section.blocks.size > 0
    or section.settings.newsletter_enable
    or section.settings.show_social
    and has_social_icons == true
    or section.settings.enable_follow_on_shop
  -%}
    {%- unless only_empty_brand -%}
      {%- liquid
        assign quick_links_menu = linklists['quick-links']
        assign customer_service_menu = linklists['new-footer-menu']
        assign footer_cta_text = section.settings.cta_text | default: 'Any questions?'
        assign footer_cta_button = section.settings.cta_button_label | default: 'Call now'
        assign footer_cta_number = section.settings.cta_phone_number | default: '0800374699'
        assign footer_cta_href = footer_cta_number | replace: ' ', '' | replace: '-', '' | replace: '(', '' | replace: ')', ''
        if footer_cta_href != blank
          assign footer_cta_href = 'tel:' | append: footer_cta_href
        endif
        assign show_cta_button = false
        if footer_cta_button != blank and footer_cta_href != blank
          assign show_cta_button = true
        endif
        assign show_cta_bar = false
        if footer_cta_text != blank
          assign show_cta_bar = true
        elsif show_cta_button
          assign show_cta_bar = true
        endif
      -%}
      {%- if show_cta_bar -%}
        <div class="footer__cta-bar" role="presentation">
          <div class="footer__cta-inner page-width">
            {%- if footer_cta_text != blank -%}
              <span class="footer__cta-text">{{ footer_cta_text }}</span>
            {%- endif -%}
            {%- if show_cta_button -%}
              <a class="footer__cta-button footer_button button button--primary" href="{{ footer_cta_href | escape }}" data-footer-cta="button">
                {{ footer_cta_button }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
      <div class="footer__content-top footer__content-top--legacy page-width" data-footer-region="top">
        <div class="footer-list-wrap" data-footer-columns>
          <div class="footer__grid legacy-footer__blocks grid">
            <div class="footer__grid-item footer__grid-item--brand footer__brand-info" data-footer-brand="true">
              {%- liquid
                assign fallback_logo_file = 'Logo_Green_Words_Only_1_1.png'
                assign fallback_logo_width = 220
                assign fallback_logo_height = 80
                assign footer_logo = settings.brand_image
                assign footer_logo_width = settings.brand_image_width | default: fallback_logo_width
                assign footer_logo_is_image = false
                if footer_logo != blank
                  assign footer_logo_is_image = true
                elsif settings.logo != blank
                  assign footer_logo = settings.logo
                  assign footer_logo_width = settings.logo_width | default: fallback_logo_width
                  assign footer_logo_is_image = true
                endif
              -%}
              {%- if footer_logo_is_image -%}
                {%- assign footer_logo_height = footer_logo_width
                  | divided_by: footer_logo.aspect_ratio
                -%}
                <div
                  class="footer-block__image-wrapper footer__logo"
                  data-footer-logo="true"
                  style="max-width: min(100%, {{ footer_logo_width }}px);"
                >
                  {{
                    footer_logo
                    | image_url: width: 1100
                    | image_tag:
                      loading: 'lazy',
                      widths: '100, 150, 200, 300, 400, 550, 800, 1100',
                      height: footer_logo_height,
                      width: footer_logo_width,
                      alt: shop.name | escape
                  }}
                </div>
              {%- elsif fallback_logo_file != blank -%}
                <div
                  class="footer-block__image-wrapper footer__logo"
                  data-footer-logo="true"
                  style="max-width: min(100%, {{ fallback_logo_width }}px);"
                >
                  <img
                    src="{{ fallback_logo_file | file_img_url: '440x' }}"
                    alt="{{ shop.name | escape }}"
                    loading="lazy"
                    width="{{ fallback_logo_width }}"
                    height="{{ fallback_logo_height }}"
                  >
                </div>
              {%- else -%}
                <div class="footer__logo footer__logo--placeholder" data-footer-logo="true">
                  {{ 'logo' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                </div>
              {%- endif -%}
              <p class="footer__brand-summary">
                We are the most established supplier of kitchen essentials and eco-friendly tableware in the New Zealand market.
              </p>
            </div>
            <div class="footer__grid-item footer__grid-item--links">
              <h3 class="footer-block__heading inline-richtext footer__column-title footer__menu-title">Quick Links</h3>
              {%- if quick_links_menu != blank and quick_links_menu.links != blank -%}
                <nav class="footer__menu" aria-label="Quick links">
                  <ul class="footer-block__details-content list-unstyled footer__menu-list">
                    {%- for link in quick_links_menu.links -%}
                      <li class="footer__menu-item">
                        <a
                          href="{{ link.url }}"
                          class="link link--text list-menu__item list-menu__item--link footer__menu-link{% if link.active %} list-menu__item--active{% endif %}"
                        >
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                </nav>
              {%- endif -%}
            </div>
            <div class="footer__grid-item footer__grid-item--service">
              <h3 class="footer-block__heading inline-richtext footer__column-title footer__menu-title">Customer Service</h3>
              {%- if customer_service_menu != blank and customer_service_menu.links != blank -%}
                <nav class="footer__menu" aria-label="Customer service">
                  <ul class="footer-block__details-content list-unstyled footer__menu-list">
                    {%- for link in customer_service_menu.links -%}
                      <li class="footer__menu-item">
                        <a
                          href="{{ link.url }}"
                          class="link link--text list-menu__item list-menu__item--link footer__menu-link{% if link.active %} list-menu__item--active{% endif %}"
                        >
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                </nav>
              {%- endif -%}
            </div>
            <div class="footer__grid-item footer__grid-item--subscribe">
              <h3 class="footer-block__heading inline-richtext footer__column-title footer__newsletter-title">Subscribe</h3>
              {%- if section.settings.newsletter_enable -%}
                <p class="footer__subscribe-lede">Stay up to date and claim a welcome discount</p>
                <div class="footer-block__newsletter footer__newsletter">
                  {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <div class="newsletter-form__field-wrapper">
                      <div class="field">
                        <input
                          id="NewsletterForm--{{ section.id }}"
                          type="email"
                          name="contact[email]"
                          class="field__input"
                          value="{{ form.email }}"
                          aria-required="true"
                          autocorrect="off"
                          autocapitalize="off"
                          autocomplete="email"
                          {% if form.errors %}
                            autofocus
                            aria-invalid="true"
                            aria-describedby="ContactFooter-error"
                          {% elsif form.posted_successfully? %}
                            aria-describedby="ContactFooter-success"
                          {% endif %}
                          placeholder="{{ 'newsletter.label' | t }}"
                          required
                        >
                        <label class="field__label" for="NewsletterForm--{{ section.id }}">
                          {{ 'newsletter.label' | t }}
                        </label>
                        <button
                          type="submit"
                          class="newsletter-form__button field__button footer_button"
                          name="commit"
                          id="Subscribe"
                          aria-label="{{ 'newsletter.button_label' | t }}"
                        >
                          <span class="svg-wrapper">
                            {{- 'icon-arrow.svg' | inline_asset_content -}}
                          </span>
                        </button>
                      </div>
                      {%- if form.errors -%}
                        <small class="newsletter-form__message form__message" id="ContactFooter-error">
                          <span class="svg-wrapper">
                            {{- 'icon-error.svg' | inline_asset_content -}}
                          </span>
                          {{- form.errors.translated_fields.email | capitalize }}
                          {{ form.errors.messages.email -}}
                        </small>
                      {%- endif -%}
                    </div>
                    {%- if form.posted_successfully? -%}
                      <h3
                        class="newsletter-form__message newsletter-form__message--success form__message"
                        id="ContactFooter-success"
                        tabindex="-1"
                        autofocus
                      >
                        <span class="svg-wrapper">
                          {{- 'icon-success.svg' | inline_asset_content -}}
                        </span>
                        {{- 'newsletter.success' | t }}
                      </h3>
                    {%- endif -%}
                  {%- endform -%}
                </div>
                <p class="footer__subscribe-location">
                  Click and Collect from<br>
                  41E Morrin Rd<br>
                  Panmure<br>
                  Auckland 1071<br>
                  NEW ZEALAND
                </p>
              {%- endif -%}
              {%- if section.settings.show_social and has_social_icons -%}
                <div class="footer__social footer__social--subscribe" data-footer-social="true">
                  {%- render 'social-icons', class: 'footer__list-social' -%}
                </div>
              {%- endif -%}
              {%- if shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
                <div class="footer__follow-on-shop">
                  {{ shop | login_button: action: 'follow' }}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>

        {%- if section.settings.trust_statement != blank -%}
          <div class="footer__trust-statement legacy-footer__trust" data-footer-region="trust">
            {{ section.settings.trust_statement }}
          </div>
        {%- endif -%}
      </div>
    {%- endunless -%}
  {%- endif -%}

  <div
    class="footer__content-bottom legacy-footer__bottom{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <div class="footer__content-bottom-wrapper legacy-footer__bottom-row page-width">
      <div class="footer__column footer__localization isolate">
        {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                {%- render 'country-localization', localPosition: 'FooterCountry' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterLanguageLabel">
                  {{ 'localization.language_label' | t }}
                </h2>
                {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}
      </div>
      <div class="footer__column footer__column--info">
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment" data-footer-payment="true">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            <ul class="list list-payment footer__payment-list" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item footer__payment-item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="footer__content-bottom-wrapper legacy-footer__bottom-row page-width{% if section.settings.enable_country_selector == false and section.settings.enable_language_selector == false %} footer__content-bottom-wrapper--center{% endif %}">
      <div class="footer__copyright caption">
        <small class="copyright__content"
          >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
        </small>
        <small class="copyright__content">{{ powered_by_link }}</small>
        {%- if section.settings.show_policy -%}
          <ul class="policies list-unstyled">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content"
                    ><a href="{{ policy.url }}">{{ policy.title | escape }}</a></small
                  >
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

