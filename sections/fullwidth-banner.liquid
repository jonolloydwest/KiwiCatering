<!-- Browuse categoryies -->
<section class="slider-category" {% if section.settings.slider_cat_bg_img_enable %}style="background-image: url('{% if section.settings.slider_cat_bg_img %}{{ section.settings.slider_cat_bg_img | img_url: 'master' }}{% else %}https://dummyimage.com/1920x532/f7f7f7/999999{% endif %}');"{% endif %}> 
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
      {% if section.settings.slider_cat_title !='' %}
      <div class="section-capture">
        <div class="section-title">
          {% if section.settings.slider_cat_title !='' %}
          <h2>{{ section.settings.slider_cat_title }}</h2>
          {% endif %}
        </div>
      </div>
      {% endif %}
      <div class="cat-slider owl-carousel owl-theme" id="category-slider">
        {% for block in section.blocks %}
        {% assign category_product = collections[block.settings.slider_category_handle] %}
        <div class="item">
          <div class="category-wrap">
            <a href="{{ category_product.url }}">
              <span class="cat-img"><img class="img-fluid" src="{% if block.settings.collection_img %}{{ block.settings.collection_img | img_url: 'master' }}{% else %}https://dummyimage.com/270x185/f7f7f7/999999{% endif %}"></span>
              <span class="cat-title">{{ category_product.title }}</span>
            </a>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  $('#category-slider').owlCarousel({
    loop: false,
    rewind: true,
    margin: 30,
    nav: true,
    navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
    dots: false,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    autoplay: true,
    sautoplayTimeout: 5000,
    autoplayHoverPause: true,
    responsive:{
      0:{
        items: 1,
        margin: 15
      },
      479:{
        items: 1,
        margin: 15
      },
      768:{
        items: 3
      },
      979:{
        items: 4
      },
      1199:{
        items: 5
      }
    }
  });
</script>
{% schema %}
{
  "name": "Category",
  "settings": [
  {
    "type" : "header",
    "content" : "Section Padding"
  },
  {
    "type" : "paragraph",
    "content" : "Desktop / Laptop / tablet"
  },
  {
    "type": "range",
    "id": "cat_padding_top",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "default": 60
  },
  {
    "type": "range",
    "id": "cat_padding_bottom",
    "label": "Section Padding Bottom",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "default": 60
  },
  {
    "type" : "paragraph",
    "content" : "Mobile"
  },
  {
    "type": "range",
    "id": "cat_padding_top_xs",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "default": 40
  },
  {
    "type": "range",
    "id": "cat_padding_bottom_xs",
    "label": "Section Padding Bottom",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "default": 40
  },
  {
    "type" : "header",
    "content" : "Section Background Image"
  },
  {
    "type": "image_picker",
    "id": "slider_cat_bg_img",
    "label": "Background Image",
    "info": "Recommended Size: 1920 x 532px"
  },
  {
    "type": "checkbox",
    "id": "slider_cat_bg_img_enable",
    "label": "Show Background Image",
    "default": false
  },
  {
    "type" : "header",
    "content" : "Section Background Color"
  },
  {
    "type" : "color",
    "id" : "slider_cat_bgcolor",
    "label" : "Background Color",
    "default" : "#fff"
  },
  {
    "type" : "checkbox",
    "id" : "slider_cat_bgcolor_enable",
    "label" : "With Backgorund",
    "default" : true
  },
  {
    "type" : "header",
    "content" : "Section Title"
  },
  {
    "type": "text",
    "id": "slider_cat_title",
    "label": "Title",
    "default": "Shop By Category"
  }
  ],
  "blocks" : [
  {
    "name" : "slider-category",
    "type" : "product_tab",
    "settings" : [
    {
      "type": "collection",
      "id": "slider_category_handle",
      "label": "Select Your Collection"
    },
    {
      "type": "image_picker",
      "id": "collection_img",
      "label": "Collection image",
      "info": "Recommended Size: 270px x 185px"
    }
    ]
  }
  ],
  "presets":[
  {
    "name": "Category",
    "category": "Shop By Category"
  }
  ]
}
{% endschema %}
<style>
  .slider-category {
    padding-top:{{ section.settings.cat_padding_top }}px;
    padding-bottom:{{ section.settings.cat_padding_bottom }}px;

    {% if section.settings.slider_cat_bgcolor_enable %}
    background-color: {{ section.settings.slider_cat_bgcolor }};
    {% endif %}

    {% if section.settings.slider_cat_bg_img_enable %}
    background-repeat: no-repeat;
    {% endif %}
  }
  @media (max-width: 767px) {
    .slider-category {
      padding-top:{{ section.settings.cat_padding_top_xs }}px;
      padding-bottom:{{ section.settings.cat_padding_bottom_xs }}px;
    }
  }

  .cat-slider .category-wrap{
    text-align: center;
  }
  .cat-slider .category-wrap a{
    position: relative;
    display: block;
  }
  .cat-slider .category-wrap a span.cat-img{
    display: block;
    overflow: hidden;
  }
  .cat-slider .category-wrap a:hover span.cat-img img{
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
    -moz-transform: scale(1.1);
    -ms-transform: scale(1.1);
    -o-transform: scale(1.1);
  }
  .cat-slider .category-wrap a span.cat-title{
    display: block;
    font-size: 16px;
    position: absolute;
    top: 15px;
    {% if settings.enable_rtl %}
    left: 15px;
    {% else %}
    right: 15px;
    {% endif %}
    text-transform: capitalize;
  }
  .cat-slider .category-wrap a span.cat-img img,
  .cat-slider .category-wrap a:hover span.cat-img img{
    -webkit-transition: all 0.3s ease-in-out 0s;
    -o-transition: all 0.3s ease-in-out 0s;
    transition: all 0.3s ease-in-out 0s;
}
</style>