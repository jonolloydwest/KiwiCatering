<style>
  .slider-category {
    padding-top:{{ section.settings.cat_padding_top }}px;
    padding-bottom:{{ section.settings.cat_padding_bottom }}px;

    {% if section.settings.slider_cat_bgcolor_enable %}
    background-color: {{ section.settings.slider_cat_bgcolor }};
    {% endif %}

    {% if section.settings.slider_cat_bg_img_enable %}
    background-repeat: no-repeat;
    {% endif %}
  }
  @media (max-width: 767px) {
    .slider-category {
      padding-top:{{ section.settings.cat_padding_top_xs }}px;
      padding-bottom:{{ section.settings.cat_padding_bottom_xs }}px;
    }
  }

  .cat-slider .category-wrap{
    text-align: center;
  }
  .cat-slider .category-wrap a{
    position: relative;
    display: block;
  }
  .cat-slider .category-wrap a span.cat-img{
    position: relative;
    display: block;
    overflow: hidden;
    padding-top: 68%;
  }
  .cat-slider .category-wrap a span.cat-img img{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .cat-slider .category-wrap a:hover span.cat-img img{
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
    -moz-transform: scale(1.1);
    -ms-transform: scale(1.1);
    -o-transform: scale(1.1);
  }
  .cat-slider .category-wrap a span.cat-title{
    display: block;
    font-size: 16px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-weight: 700;
    text-align: center;
    width: calc(100% - 30px);
    pointer-events: none;
    text-transform: capitalize;
  }
  .cat-slider .category-wrap a span.cat-img img,
  .cat-slider .category-wrap a:hover span.cat-img img{
    -webkit-transition: all 0.3s ease-in-out 0s;
    -o-transition: all 0.3s ease-in-out 0s;
    transition: all 0.3s ease-in-out 0s;
}
  .slider-category .section-title--home-heading{
    margin-bottom: 60px;
    text-align: center;
  }
  .slider-category .section-title--home-heading h2{
    color: inherit;
  }
  .slider-category .section-title--home-heading .title-highlight{
    color: {{ settings.color_primary | default: '#52b357' }};
  }
  @media (max-width: 1199px) {
    .slider-category .section-title--home-heading{
      margin-bottom: 40px;
    }
  }
  @media (max-width: 767px) {
    .slider-category .section-title--home-heading{
      margin-bottom: 30px;
    }
  }
</style>
