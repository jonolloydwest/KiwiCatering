<!-- Browuse categoryies -->
<section class="slider-category" {% if section.settings.slider_cat_bg_img_enable %}style="background-image: url('{% if section.settings.slider_cat_bg_img %}{{ section.settings.slider_cat_bg_img | image_url: width: 2048 }}{% else %}{{ 'placeholder-image.svg' | asset_url }}{% endif %}');"{% endif %}> 
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
      {% if section.settings.slider_cat_title !='' %}
      <div class="section-title section-title--home-heading">
        {% assign slider_title_words = section.settings.slider_cat_title | strip | split: ' ' %}
        {% assign slider_title_color = settings.color_primary | default: '#52b357' %}
        <h2>
          {% for word in slider_title_words %}
            {% assign downcase_word = word | downcase %}
            {% if downcase_word == 'shop' %}
              <span class="title-highlight">{{ word }}</span>
            {% else %}
              <span>{{ word }}</span>
            {% endif %}
            {% unless forloop.last %} {% endunless %}
          {% endfor %}
        </h2>
      </div>
      {% endif %}
      <div class="cat-slider owl-carousel owl-theme" id="category-slider">
        {% for block in section.blocks %}
        {% assign category_product = collections[block.settings.slider_category_handle] %}
        <div class="item">
          <div class="category-wrap">
            <a href="{{ category_product.url }}">
            <span class="cat-img">
              {% assign collection_image = block.settings.collection_img %}
              {% assign collection_alt = block.settings.collection_title | default: category_product.title | default: shop.name %}
              {% if collection_image == blank and category_product and category_product.image %}
              {% assign collection_image = category_product.image %}
              {% endif %}
              {% if collection_image %}
              {% assign collection_width = collection_image.width | default: 270 %}
              {% assign collection_height = collection_image.height | default: 185 %}
              {% assign collection_src = collection_image | image_url: width: 1200 %}
              <img class="img-fluid" src="{{ collection_src }}" alt="{{ collection_alt }}" width="{{ collection_width }}" height="{{ collection_height }}" loading="lazy">
              {% else %}
              <img class="img-fluid" src="{{ 'placeholder-image.svg' | asset_url }}" alt="{{ collection_alt }}" width="270" height="185" loading="lazy">
              {% endif %}
            </span>
              <span class="cat-title">{{ category_product.title }}</span>
            </a>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<script>
  (function () {
    var sectionId = '{{ section.id }}';

    function getSlider(scope) {
      if (!window.jQuery) {
        return null;
      }
      var $scope = scope ? window.jQuery(scope) : window.jQuery(document);
      return $scope.find('#category-slider');
    }

    function destroySlider($slider) {
      if ($slider && $slider.length && $slider.hasClass('owl-loaded')) {
        $slider.trigger('destroy.owl.carousel');
      }
    }

    function initSlider(scope, attempt) {
      var attempts = attempt || 0;
      if (!window.jQuery || typeof window.jQuery.fn.owlCarousel !== 'function') {
        if (attempts > 10) {
          return;
        }
        setTimeout(function () {
          initSlider(scope, attempts + 1);
        }, 200);
        return;
      }

      var $slider = getSlider(scope);
      if (!$slider || !$slider.length) {
        return;
      }

      if ($slider.hasClass('owl-loaded')) {
        $slider.trigger('refresh.owl.carousel');
        return;
      }

      $slider.owlCarousel({
        loop: false,
        rewind: true,
        margin: 30,
        nav: true,
        navText: ['<i class="fa fa-angle-left"></i>', '<i class="fa fa-angle-right"></i>'],
        dots: false,
        {%- if settings.enable_rtl -%}
        rtl: true,
        {%- endif -%}
        autoplay: true,
        autoplayTimeout: 5000,
        autoplayHoverPause: true,
        responsive: {
          0: {
            items: 1,
            margin: 15
          },
          479: {
            items: 1,
            margin: 15
          },
          768: {
            items: 3
          },
          979: {
            items: 4
          },
          1199: {
            items: 5
          }
        }
      });
    }

    function onDomReady(callback) {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', callback);
      } else {
        callback();
      }
    }

    onDomReady(function () {
      initSlider();
    });

    document.addEventListener('shopify:section:load', function (event) {
      if (event.detail && event.detail.sectionId === sectionId) {
        initSlider(event.target);
      }
    });

    document.addEventListener('shopify:section:unload', function (event) {
      if (event.detail && event.detail.sectionId === sectionId) {
        destroySlider(getSlider(event.target));
      }
    });
  })();
</script>
