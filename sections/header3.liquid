<!-- header-area start -->
<section class="header3">
  <div class="header-kaj">
    <div class="header-area">
      <div class="header-main">
        <div class="header-element logo">
          {%- if settings.company_logo -%}
          {% if template == 'index' %}
          <a href="/" class="theme-logo">
            <img class="header-logo" src="{%- if settings.company_logo -%}{{ settings.company_logo | img_url: 'master' }}{% else %}https://dummyimage.com/207x44/f7f7f7/999999{% endif %}" alt="{{ settings.company_logo.alt | default: shop.name }}">
            <img class="sticky-logo" src="{%- if settings.company_logo_other -%}{{ settings.company_logo_other | img_url: 'master' }}{% else %}https://dummyimage.com/207x44/f7f7f7/999999{% endif %}" alt="{{ settings.company_logo_other.alt | default: shop.name }}">
          </a>
          {% else %}
          <a href="/" class="theme-logo">
            <img class="sticky-logo" src="{%- if settings.company_logo_other -%}{{ settings.company_logo_other | img_url: 'master' }}{% else %}https://dummyimage.com/207x44/f7f7f7/999999{% endif %}" alt="{{ settings.company_logo_other.alt | default: shop.name }}">
          </a>
          {% endif %}
          {%- else -%}
          <a href="/" class="shop-name">
            <span>{{ shop.name }}</span>
          </a>
          {%- endif -%}
        </div>
        <div class="header-element megamenu-content">
          <div class="mainwrap">
            <ul class="main-menu">
              {% assign header_main_menu = section.settings.header_main_menu %}
              {% for link in linklists[header_main_menu].links %}
              {% if linklists[header_main_menu].links != '' %}
              {% include 'main-menu' %}
              {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="header-element right-block-box">
          <ul class="shop-element">
            <li class="side-wrap toggler-wrap">
              <button class="navbar-toggler" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
              </button>
            </li>
            <li class="side-wrap search-wrap">
              <div class="search-rap">
                <a class="search-crap" data-toggle="modal" href="#search-crap">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </a>
              </div>
            </li>
            <li class="side-wrap user-wrap">
              {%- include 'store-account' -%}
            </li>
            <li class="side-wrap wishlist-wrap">
              {%- include 'wishlist-4' -%}
            </li>
            <li class="side-wrap cart-wrap">
              {% include 'mini-cart' %}
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  {%- include 'search-modal' -%}
  <div class="header-bottom-area">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="main-menu-area">
            <nav class="main-navigation navbar-expand-xl">
              <div class="box-header">
                <button class="close-box" type="button"><i class="ti-close"></i></button>
              </div>
              <div class="navbar-collapse" id="navbarContent">
                <div class="megamenu-content">
                  <a href="javascript:void(0)" class="browse-cat" data-toggle="collapse" aria-expanded="false">
                    <i class="ti-menu"></i>
                    <span>{{ section.settings.header_main_menu_title }}</span>
                  </a>
                  <div class="mainwrap">
                    <ul class="main-menu">
                      {% assign header_main_menu = section.settings.header_main_menu %}
                      {% for link in linklists[header_main_menu].links %}
                      {% if linklists[header_main_menu].links != '' %}
                      {% include 'main-menu' %}
                      {% endif %}
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- header-area end -->
<script>
  {% if template == 'index' or template == 'product' or template == 'collection' %}
  $(window).scroll(function() {
    var sticky = $('.header-kaj'),
    scroll = $(window).scrollTop();
    if (scroll >= 150) {
      sticky.addClass('is-sticky');
    }
    else {
      sticky.removeClass('is-sticky');
    }
  });
  {% endif %}
</script>
{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Logo Notice"
    },
    {
      "type": "paragraph",
      "content": "For logo go to 'Theme Settings' click on 'Company Logo' & set both Header-Footer Logo"
    },
    {
      "type": "header",
      "content": "Section Background Color"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Background Color",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "header_bg_color_enable",
      "label": "Show Background Color",
      "default": true
    },
    {
      "type": "color",
      "id": "header_txt_color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Main Menu"
    },
    {
      "type" : "paragraph",
      "content" : "For main menu"
    },
    {
      "type": "link_list",
      "id": "header_main_menu",
      "label": "Select Main Menu"
    },
    {
      "type" : "paragraph",
      "content" : "Mainmenu title for responsive"
    },
    {
      "type": "text",
      "id": "header_main_menu_title",
      "label": "Title",
      "default": "Menu"
    },
    {
      "type": "header",
      "content": "Search Bar"
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search Placeholder",
      "default": "Search Our Catalog"
    },
    {
      "type": "checkbox",
      "id": "header_sticky_enable",
      "label": "Show Header Sticky",
      "default": true
    }
  ]
}
{% endschema %}
<style>
  /*transparent header css*/
  {% if template == 'index' %}
  .header-area{
    position: absolute;
    left: 0;
    right: 0;
    z-index: 2;
  }
  {% endif %}
  @media(max-width: 1199px){
    .header-area{
      position: unset;
    }
  }
  
  /* sticky menu css */
  {% if section.settings.header_sticky_enable %}
  .is-sticky{
    position: fixed;
    top: 0;
    {%- if settings.enable_rtl -%}
    right: 0;
    {%- else -%}
    left: 0;
    {%- endif -%}
    width: 100%;
    z-index: 3;
    background-color: #fff;
    -webkit-box-shadow: rgba(116,116,116,.05) 0 0px 0px 0px, rgba(32,32,32,.05) 0 4px 10px;
    -moz-box-shadow: rgba(116,116,116,.05) 0 0px 0px 0px, rgba(32,32,32,.05) 0 4px 10px;
    box-shadow: rgba(116,116,116,.05) 0 0px 0px 0px, rgba(32,32,32,.05) 0 4px 10px;
  }
  .header-kaj.is-sticky .header-area{
    position: unset;
  }
  .header-kaj.is-sticky{
    animation: smoothScroll 1s forwards;
  }
  @keyframes smoothScroll {
    0% {
      transform: translateY(-150px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  {% endif %}

  @media (max-width: 1199px) {
    .right-block-box ul.shop-element li.side-wrap{
      {% if settings.enable_rtl %}
      margin-left: 15px;
      {% else %}
      margin-right: 15px;
      {% endif %}
    }
  }
  
  /*box header*/
  html.box-layout .header-area {
    max-width: 1500px;
    margin: 0 auto;
  }

  /*header logo*/
  .header-kaj .sticky-logo{
    display: none;
  }
  .header-kaj.is-sticky .sticky-logo{
    display: block;
  }
  .header-kaj.is-sticky .header-logo{
    display: none;
  }
  {% if template != 'index' %}
  .header-kaj .sticky-logo{
    display: block;
  }
  .header-kaj .header-logo{
    display: none;
  }
  {% endif %}
  @media(max-width: 1199px){
    .header-kaj .header-logo{
      display: none;
    }
    .header-kaj .sticky-logo{
      display: block;
    }
  }

  {% if template == 'index' %}
  .right-block-box ul.shop-element li.search-wrap .search-rap svg,
  .user-wrap .acc-desk a.acc-ti svg,
  .wishlist a.header-wishlist span.wishlist-icon svg,
  .shopping-widget .shopping-cart a span.cart-icon-wrap span.cart-icon svg{
    stroke: {{ section.settings.header_txt_color }};
  }
  .megamenu-content .mainwrap ul.main-menu li.menu-link a.link-title{
    color: {{ section.settings.header_txt_color }};
  }
  {% endif %}
  .header-kaj.is-sticky .right-block-box ul.shop-element li.search-wrap .search-rap svg,
  .header-kaj.is-sticky .user-wrap .acc-desk a.acc-ti svg,
  .header-kaj.is-sticky .wishlist a.header-wishlist span.wishlist-icon svg,
  .header-kaj.is-sticky .shopping-widget .shopping-cart a span.cart-icon-wrap span.cart-icon svg{
    stroke: #222;
  }
  .header-kaj.is-sticky .megamenu-content .mainwrap ul.main-menu li.menu-link a.link-title{
    color: #222;
  }
  @media(max-width: 1199px){
    .right-block-box ul.shop-element li.search-wrap .search-rap svg,
    .user-wrap .acc-desk a.acc-ti svg,
    .wishlist a.header-wishlist span.wishlist-icon svg,
    .shopping-widget .shopping-cart a span.cart-icon-wrap span.cart-icon svg{
    stroke: #222;
    }
    .megamenu-content .mainwrap ul.main-menu li.menu-link a.link-title{
      color: #222;
    }
  }
</style>