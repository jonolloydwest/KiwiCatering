{%- assign item = section.settings -%}
{%- if item.show_section and section.blocks.size > 0 -%}
<div class="st-promo-fixed{% unless item.show_on_mobile %} st-hidden-mobile{% endunless %}"
     style="{% if item.show_always %} opacity: 1;{% endif %}"
     data-start="{{ item.val_first | times: 1000 | round }}"
     data-min="{{ item.val_min | times: 1000 | round }}"
     data-max="{{ item.val_max | times: 1000 | round }}">
  <button class="st-btn-close">
    <i class="ion-close-round"></i>
  </button>
  <div class="st-img">
    <a href="#"><img class="lazyload" src="{{ product.featured_image.src | image_url: width: 80, height: 80, crop: 'center' }}" alt="{{ product.title | escape }}" width="80" height="80"></a>
  </div>
  <div class="st-description" style="color:{{ item.text_color }};">
    <div class="st-box-top">
      <p>{{ item.text1 }}</p>
      <a href="#" class="pr_name" style="color:{{ item.name_color }}" data-c="{{ item.name_color }}" data-hovercolors></a>
      <p class="st-info">
        <span class="st-info-value"></span>
        <span class="st-info-text"></span>
      </p>
    </div>
  </div>
</div>

{%- if section.blocks.size > 0 -%}
<div class="hide promofixeddata">
  {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
  {%- assign pri = b_i.pr_item -%}
  {%- unless pri == blank -%}
  {%- assign pri = all_products[pri] -%}
  <div data-url="{{ pri.url }}"
       data-image="{{ pri.featured_image.src | image_url: width: 150 }}"
       data-alt="{{ pri.featured_image.alt }}"
       data-name="{{ pri.title }}"
       data-text="{{ b_i.text1 }}{% unless b_i.text2 == '' %}||{{ b_i.text2 }}{% endunless %}{% unless b_i.text3 == '' %}||{{ b_i.text3 }}{% endunless %}{% unless b_i.text4 == '' %}||{{ b_i.text4 }}{% endunless %}{% unless b_i.text5 == '' %}||{{ b_i.text5 }}{% endunless %}"
       data-min="{{ b_i.val_min }}"
       data-max="{{ b_i.val_max }}"
       ></div>
  {%- endunless -%}
  {%- endfor -%}
</div>
{%- endif -%}

{%- endif -%}

