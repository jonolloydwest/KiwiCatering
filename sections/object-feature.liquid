<!-- banner-area start -->
<section class="custom-about-feature">
  <div class="container">
    <div class="row">
     
      <div class="col-xl-6 col-lg-6 col-md-5 col-12">
        <div class="custom-text-banner">
          <a href="{{ section.settings.feature_button_url }}">
            {% assign feature_banner_image = section.settings.feature_banner_img %}
            {% if feature_banner_image %}
              {% assign feature_banner_alt = section.settings.feature_title1 | default: shop.name %}
              {% assign feature_banner_width = feature_banner_image.width | default: 1024 %}
              {% assign feature_banner_height = feature_banner_image.height | default: 800 %}
              {% assign feature_banner_src = feature_banner_image | image_url: width: 1600 %}
              <img loading="lazy" src="{{ feature_banner_src }}" alt="{{ feature_banner_alt }}" width="{{ feature_banner_width }}" height="{{ feature_banner_height }}">
            {% else %}
              <img loading="lazy" src="{{ 'placeholder-image.svg' | asset_url }}" alt="Feature banner" width="1024" height="800">
            {% endif %}
          </a>
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-7 col-12 ">
        <div class="text-feature-wrap">
          <div class="text-feature">
            <h2>
              <span>{{ section.settings.feature_title1 }}</span>
              <span>{{ section.settings.feature_title2 }}</span>
            </h2>
            {% if section.blocks.size > 0 %}
            <ul class="objFeat">
              {% for block in section.blocks %}
              {% if block.settings.feature_point != '' %}
              <li>
                <span class="feature-icon">
                  {% assign feature_icon_image = block.settings["feature-icon_img"] %}
                  {% if feature_icon_image %}
                    {% assign feature_icon_alt = block.settings.feature_point | default: shop.name %}
                    {% assign feature_icon_width = feature_icon_image.width | default: 120 %}
                    {% assign feature_icon_height = feature_icon_image.height | default: 120 %}
                    {% assign feature_icon_src = feature_icon_image | image_url: width: 320 %}
                    <img loading="lazy" src="{{ feature_icon_src }}" alt="{{ feature_icon_alt }}" width="{{ feature_icon_width }}" height="{{ feature_icon_height }}">
                  {% elsif block.settings.feature_icon != blank %}
                    {{ block.settings.feature_icon }}
                  {% else %}
                    <img loading="lazy" src="{{ 'placeholder-image.svg' | asset_url }}" alt="Icon" width="100" height="100">
                  {% endif %}
                 </span>
                <div class="">
                  <h6>{{ block.settings.feature_point }}</h6>
                  <p>{{ block.settings.feature_sub_point }}</p>
                </div>
              </li>
              {% endif %}
              {% endfor %}
            </ul>
            {% endif %}
            {% if section.settings.feature_text_button != "" %}
            <a href="{{ section.settings.feature_button_url }}" class="btn btn-style">{{ section.settings.feature_text_button }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- banner-area end -->
{% schema %}
