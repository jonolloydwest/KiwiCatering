  "blocks":[
  {
    "type": "feature",
    "name": "Feature",
    "settings": [
    {
      "type": "header",
      "content": "Feature point"
    },
    {
      "type": "textarea",
      "id": "feature_icon",
      "label": "Feature icon",
      "info": "https://feathericons.com"
    },
    {
      "type": "image_picker",
      "id": "feature-icon_img",
      "label": "Banner Image",
      "info": "Recommended Size: 100px x 100px"
    },
    {
      "type": "text",
      "id": "feature_point",
      "label": "Feature",
      "default": "24+ hours battery backup"
    },
    {
      "type": "text",
      "id": "feature_sub_point",
      "label": "Feature sub point",
      "default": "V5.0"
    }
    ]
  } 
  ],
  "presets":[
  {
    "name": "Object Feature",
    "category": "Custom"
  }
  ]
}
{% endschema %}
<style>
  .custom-about-feature{
    padding-top: {{ section.settings.feature_padding_top }}px;
    padding-bottom: {{ section.settings.feature_padding_bottom }}px;

    {% if section.settings.feature_bg_check %}
    background-color: {{ section.settings.feature_bgcolor }};
    {% endif %}
  }
  @media (max-width: 1199px){
    .custom-about-feature{
      padding-top: {{ section.settings.feature_padding_top_ip }}px;
      padding-bottom: {{ section.settings.feature_padding_bottom_ip }}px;
    }
  }
  @media (max-width: 767px){
    .custom-about-feature{
      padding-top: {{ section.settings.feature_padding_top_xs }}px;
      padding-bottom: {{ section.settings.feature_padding_bottom_xs }}px;
    }
    .objFeat {
      display: grid!important;
      grid-template-columns: 1fr 1fr;
      align-items: start!important;
      align-content: center;
      justify-content: space-between;
    }
    .objFeat div{text-align: center;}
    .text-feature-wrap .text-feature ul li .feature-icon {
      margin: 10px auto 25px!important;
      display: block;
    }
  }

  /* feature content css */
  .custom-about-feature .row{
    align-items: center;
  }
  .text-feature-wrap .text-feature h2 span{
    margin-top: 10px;
    display: block;
  }
  .text-feature-wrap .text-feature h2 span:first-child{
    margin-top: 0;
  }
  .text-feature-wrap .text-feature h2{
    font-size: 40px;
    line-height: 1;
  }
  .text-feature-wrap .text-feature ul {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    {%- if settings.enable_rtl -%}
    margin-right: -30px;
    {%- else -%}
    margin-left: -30px;
    {%- endif -%}
  }
  .text-feature-wrap .text-feature ul li {
    width: calc(50% - 30px);
    {%- if settings.enable_rtl -%}
    margin-right: 30px;
    {%- else -%}
    margin-left: 30px;
    {%- endif -%}
    margin-top: 60px;
    align-items: center;
  }
  .text-feature-wrap .text-feature ul li .feature-icon {
    {%- if settings.enable_rtl -%}
     margin-left: 30px;
    {%- else -%}
     margin-right: 30px;
    {%- endif -%}
    margin-bottom: 25px;
  }
  .text-feature-wrap .text-feature ul li .feature-icon svg{
    width: 30px;
    height: 30px;
    fill: {{ settings.color_primary }};
  }
  .text-feature-wrap .text-feature ul li h6{
    font-size: 20px;
    font-weight: 500;
    line-height: 1;
  }
  .text-feature-wrap .text-feature ul li p{
    color: #999;
    font-size: 14px;
    margin-top: 6px; 
  }
  .text-feature-wrap .text-feature a{
    margin-top: 34px;
  }
  @media(max-width: 1199px){
    .text-feature-wrap .text-feature h2{
      font-size: 30px;
    }
    .text-feature-wrap .text-feature ul {
      {%- if settings.enable_rtl -%}
      margin-right: -15px;
      {%- else -%}
      margin-left: -15px;
      {%- endif -%}
    }
    .text-feature-wrap .text-feature ul li{
      width: calc(50% - 15px);
      margin-top: 30px;
      {%- if settings.enable_rtl -%}
      margin-right: 15px;
      {%- else -%}
      margin-left: 15px;
      {%- endif -%}
    }
    .text-feature-wrap .text-feature ul li h6{
      font-size: 16px;
    }
    .text-feature-wrap .text-feature ul li .feature-icon{
      {%- if settings.enable_rtl -%}
      margin-left: 15px;
      {%- else -%}
      margin-right: 15px;
      {%- endif -%}
    }
  }
  @media(max-width: 991px){
    .text-feature-wrap .text-feature h2{
      font-size: 26px;
    }
  }
  @media(max-width: 767px){
    .text-feature-wrap .text-feature h2{
      font-size: 20px;
    }
    .text-feature-wrap .text-feature ul li{
      width: calc(100% - 15px);
      margin-top: 30px !important;
    }
    .custom-about-feature .custom-text-banner{
      margin-top: 30px; 
    }
  }
</style>
