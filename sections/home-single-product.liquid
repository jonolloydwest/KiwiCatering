<!-- deal start -->
<section>
  <div class="single-product">
    <a class="custom-banner" href="{{ section.settings.custom_banner_url }}" style="background-image: url({% if section.settings.custom_banner_img %}{{ section.settings.custom_banner_img | image_url: width: 2048 }}{% else %}{{ 'placeholder-image.svg' | asset_url }}{% endif %});">
      </a>
    <div class="owl-carousel owl-theme single-product-slider" id="single-product-slider">
      {% for block in section.blocks %}
      {% assign featured_product = all_products[block.settings.pr_item] %}
      {% if featured_product %}
      <div class="item">
        {% render 'single-product', product: featured_product %}
      </div>
      {% endif %}
      {% endfor %}
    </div>
      
  </div>
</section>
<!-- deal end -->
<script type="text/javascript">
  $( document ).ready(function() {
    $('#single-product-slider').owlCarousel({
      margin: 30,
      nav: true,
      navText: ['<i class="ti-arrow-left"></i>','<i class="ti-arrow-right"></i>'],
      dots: false,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      responsive:{
        0:{
          items: 1,
          margin: 15
        },
        479:{
          items: 1,
          margin: 15
        },
        768:{
          items: 1
        },
        979:{
          items: 1
        },
        1199: {
          items: 1
        }
      }
    });
  });
</script>
{% schema %}
{
