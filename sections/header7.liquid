/* sticky menu css */
.is-sticky{
  width: 100%;
  position: fixed;
  top: 0;
  {%- if settings.enable_rtl -%}
  right: 0;
  {%- else -%}
  left: 0;
  {%- endif -%}
  max-width: 100%;
  z-index: 3;
  background-color: #fff;
  -webkit-box-shadow: rgba(116,116,116,.05) 0 0px 0px 0px, rgba(32,32,32,.05) 0 4px 10px;
  -moz-box-shadow: rgba(116,116,116,.05) 0 0px 0px 0px, rgba(32,32,32,.05) 0 4px 10px;
  box-shadow: rgba(116,116,116,.05) 0 0px 0px 0px, rgba(32,32,32,.05) 0 4px 10px;
}
.box-layout .is-sticky{
  max-width: 1500px;
  margin: 0 auto;
  {%- if settings.enable_rtl -%}
  left: 0;
  {%- else -%}
  right: 0;
  {%- endif -%}
}
.header-kaj.is-sticky .header-area{
  position: unset;
}
.header-kaj.is-sticky{
  animation: smoothScroll 1s forwards;
}
@keyframes smoothScroll {
  0% {
    transform: translateY(-150px);
  }
  100% {
    transform: translateY(0px);
  }
}
{%- if template == 'index' -%}
.header-transparent{
  position: absolute;
  z-index: 9;
  top: 0;
  left: 0;
  right: 0;
}
.header-area{
  padding-left: 40px;
  padding-right: 40px;
  background-color: {{ section.settings.header_bg_color }};
  box-shadow: 0 0 15px rgb(0 0 0 / 10%);
}
.box-layout .header-area{
  max-width: 1500px;
  margin: 0 auto;
}
.is-sticky .header-area{
  box-shadow: none;
  padding-left: 0px;
  padding-right: 0px;
}
.is-sticky .header-transparent{
  position: unset;
}
@media (max-width: 1599px) {
  .header-transparent{
    position: unset;
  }
  .header-area{
    box-shadow: none;
  }
}
@media (max-width: 1199px) {
  .header-area{
    padding-left: 0px;
    padding-right: 0px;
  }
}
{% endif %}
@media (max-width: 1199px) {
  .right-block-box ul.shop-element li.side-wrap{
    {% if settings.enable_rtl %}
    margin-left: 15px;
    {% else %}
    margin-right: 15px;
    {% endif %}
  }
}

.user-wrap{
  display: none;
}
.user-wrap a.acc-ti svg{
  width: 20px;
  height: 20px;
  stroke: #333;
}
@media(max-width: 767px){
  .user-wrap{
    display: block;
  }
}
</style>