{%- liquid
  assign default_hero_intro = "<p>We partner with Stripe to keep restricted products safe and compliant. Have a valid photo ID ready and complete the secure check in just a couple of minutes.</p>"
  assign hero_pill = section.settings.hero_pill | default: "VERIFICATION REQUIRED"
  assign hero_title = section.settings.hero_title | default: "RESTRICTED PRODUCTS APPLICATION"
  assign hero_intro = section.settings.hero_intro | default: default_hero_intro | strip
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .verify-page-hero .page-hero {
    position: relative;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: clamp(32px, 6vw, 64px) clamp(24px, 6vw, 56px);
    border-radius: 3.2rem;
    background: linear-gradient(
      135deg,
      rgba(var(--brand-color-primary), 0.13),
      rgba(var(--brand-color-primary-dark, 6, 26, 12), 0.08)
    );
    box-shadow: 0 28px 54px -32px rgba(20, 45, 24, 0.32);
    overflow: hidden;
  }

  .verify-page-hero .page-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 100% 0%, rgba(255, 255, 255, 0.55), transparent 46%);
    opacity: 0.7;
    pointer-events: none;
  }

  .verify-page-hero .page-hero__inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: clamp(1.2rem, 2vw, 2.6rem);
    max-width: 60rem;
  }

  .verify-page-hero .page-hero__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.6rem 1.2rem;
    border-radius: 999px;
    background: rgba(var(--brand-color-primary), 0.16);
    color: rgb(var(--brand-color-primary-dark, 6, 26, 12));
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    width: max-content;
  }

  .verify-page-hero .page-hero__title {
    margin: 0;
    font-size: clamp(3.2rem, 5vw, 4.2rem);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .verify-page-hero .page-hero__intro {
    margin: 0;
    color: rgba(var(--color-foreground), 0.78);
    font-size: 1.6rem;
    line-height: 1.7;
    max-width: 54rem;
  }
{%- endstyle -%}

<section class="verify-page-hero section-{{ section.id }}-padding">
  <div class="page-hero">
    <div class="page-hero__inner">
      <span class="page-hero__eyebrow">{{ hero_pill }}</span>
      <h1 class="page-hero__title">{{ hero_title }}</h1>
      {%- if hero_intro != blank -%}
        <div class="page-hero__intro rte">{{ hero_intro }}</div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Verify page hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_pill",
      "label": "Hero eyebrow",
      "default": "VERIFICATION REQUIRED"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero title",
      "default": "RESTRICTED PRODUCTS APPLICATION"
    },
    {
      "type": "richtext",
      "id": "hero_intro",
      "label": "Hero intro",
      "default": "<p>We partner with Stripe to keep restricted products safe and compliant. Have a valid photo ID ready and complete the secure check in just a couple of minutes.</p>"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "Verify page hero"
    }
  ]
}
{% endschema %}
