<section class="main-content-wrap contact-us-page">
  <div class="section-capture">
    <div class="section-title">
      {% if section.settings.contact_us_title != '' %}
      <h2>
        {{ section.settings.contact_us_title }}
      </h2>
      {% endif %}
      {% if section.settings.contact_us_des != '' %}
      <p>{{ section.settings.contact_us_des }}</p>
      {% endif %}
    </div>
  </div>

  {% if section.settings.contact_us_map_enable %}
  <div class="contact-map">
    {% if section.settings.map_show == "google_map" %}
    <div class="google-map-area">
      <div id="map" class="map"></div>
    </div>
    {% else %}
    <img class="img-fluid" src="{{ section.settings.map_images | image_url: width: 1170, height: 500 }}" alt="{{ shop.name }}" width="1170" height="500">
    {% endif %}
  </div>
  {% endif %}

  <div class="form-contact">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="contact-content">
                    <div class="get-info contact-detail">
                        <div class="form-title">
                            {% if section.settings.get_toch_title != '' %}
                            <h6>{{ section.settings.get_toch_title }}</h6>
                            {% endif %}
                        </div>
                        <ul class="contact-info-list">
                            {%- render 'company-address' -%}
                        </ul>
                    </div>
                    <div class="form-warp contact-detail">
                        <div class="form-title">
                            {% if section.settings.contact_drop_title != '' %}
                            <h6>{{ section.settings.contact_drop_title }}</h6>
                            {% endif %}
                        </div>
                        <div class="contact-form-list">
                            {% render 'contact-form'%}
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
</section>

