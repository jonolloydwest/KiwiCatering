<!-- shop start -->
<section class="all-collection">
  <div class="container">
    <div class="row">
      <div class="col">
        <ul class="grid">
          {% for collection in collections %}
          {% unless collection.handle == 'frontpage' %}
          {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
          {% assign collection =  link.object %}
          <li class="wow fadeInUp">
            <div class="collection-img" style="background-image: url('{% if collection.image %}{{ collection | img_url: 'master'  }}{% else %}{{ collection.products.first | img_url: 'master'  }}{% endif %}');">
                <div class="collection-content">
                  <div class="content">
                    <h6>{{ collection_title }}</h6>
                    <!-- <span>{{ section.settings.items_products }} ({{ collection.all_products_count }})</span> -->
                  </div>
                  <a href="{{ collection.url }}">{{ section.settings.coll_btn }}</a>
                </div>
            </div>
          </li>
          {% endunless %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>
<script>
  $('.grid').imagesLoaded(function () {
    $('.grid').isotope({
      itemSelector: 'li',
      layoutMode: 'masonry'
    });
  });
</script>
{% schema %}
{
  "name": "All collection",
  "settings": [
    {
      "type": "header",
