

<!-- Start Shop Page -->
<div class="main-content-wrap shop-page section-ptb">
 <div class="container">
    <div class="row">
      <div class="col pro-grli-wrap right-column">
        <div class="collection-page-heading">
          <h1 class="collection-page-heading__title">{{ collection.title }}</h1>
          {% if collection.description != blank %}
          <div class="collection-page-heading__description rte">{{ collection.description }}</div>
          {% endif %}
        </div>
        {%- if section.settings.collection_info_enable -%}
        <div class="collection-main-bg">
        {% if section.settings.collection_banner %}
        <img src="{{ section.settings.collection_banner | image_url: width: 2048 }}" alt="{{ section.settings.collection_banner.alt | default: collection.title }}" width="{{ section.settings.collection_banner.width }}" height="{{ section.settings.collection_banner.height }}">
        {% else %}
        <img src="{{ 'placeholder-image.svg' | asset_url }}" alt="{{ collection.title }}" width="960" height="260">
        {% endif %}
        </div> 
        {%- endif -%}
        <div class="ajax-filter-loader">
          <div class="load-block">
            <div class="overlay__content">
              <span class="spinner"></span>
            </div>
          </div>
        </div>      
        {%- if section.settings.tab_bar_enable or section.settings.short_by_enable -%}
        {%- render 'collection-sorting' -%}
        {%- endif -%}
        <div class="get-data-products">
          <div class="shop-grid">
            {%- assign products_limit = section.settings.products_limit_handle -%}
            {%- paginate collection.products by products_limit -%}
            {%- if collection.products.size > 0 -%}
            <div class="product-grid-view">
              <div class="shop-product-wrap grid-3">
                <div class="row">
                  <div class="col">
                    <ul class="product-view">
                      {%- for product in collection.products -%}
                      <li class="st-col-item">
                        {%- render 'product-grid-item', product: product, collection: collection -%}
                      </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                </div>
              </div>
              <div class="paginatoin-area">
                <ul class="paginate">
                  {% if paginate.pages > 1 %}
                  <li class="page-numerous">
                    {%- render 'pagination' -%}
                  </li>
                  {% endif %}
                </ul>
              </div>
            </div>
            {%- else -%}
            <div class="empty-product">
              <span><i class="ion-minus-circled"></i></span>
              <h2>Empty</h2>
              <p class="text-danger">There are no products matching the selection</p>
            </div>
            {%- endif -%}
            {%- endpaginate -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Shop Page -->
{% schema %}
{
  "name": "Collection Template",
  "settings": [
    {
      "type": "header",
      "content": "Product Options"
    },
    {
      "type": "text",
      "id": "products_limit_handle",
      "label": "Product Limit",
      "default": "12",
      "info": "How many posts will appear on each page"
    },
    {
      "type": "header",
      "content": "Collection Information"
    },
    {
    "type": "checkbox",
    "id": "collection_info_enable",
    "label": "Show Collection Info",
    "default": true
  },
  {
    "type": "image_picker",
    "id": "collection_banner",
    "label": "Banner Image",
    "info": "Recommended Size: 960px x 260px"
  },    
    {
      "type": "header",
      "content": "Collection Sorting"
    },
    {
      "type": "checkbox",
      "id": "tab_bar_enable",
      "label": "Show Grid/List View",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "short_by_enable",
      "label": "Show Short By",
      "default": true
    },
  ]
}
{% endschema %}
<style>
  .collection-main-bg{
    margin-bottom: 30px;
  }
  .collection-page-heading{
    text-align: center;
    margin-bottom: 35px;
  }
  .collection-page-heading__title{
    font-size: 32px;
    font-weight: 600;
    margin: 0;
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }
  .collection-page-heading__description{
    max-width: 760px;
    margin: 15px auto 0;
    font-size: 15px;
    color: #555;
  }
  .collection-page-heading__description p:last-child{
    margin-bottom: 0;
  }
  /* loader filter */
  .ajax-filter-loader{
    position: fixed;
    top: 0;
    {% if settings.enable_rtl %}
    right: 0;
    {% else %}
    left: 0;
    {% endif %}
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 100;
    display: none;
  }
  .ajax-filter-loader .load-block{
    position: absolute;
    top: 0;
    {% if settings.enable_rtl %}
    right: 0;
    {% else %}
    left: 0;
    {% endif %}
    width: 100%;
    height: 100%;
  }
  .ajax-filter-loader .load-block .overlay__content{
    position: absolute;
    top: 50%;
    {% if settings.enable_rtl %}
    right: 50%;
    transform: translate(50%, -50%);
    {% else %}
    left: 50%;
    transform: translate(-50%, -50%);
    {% endif %}
  }
  .ajax-filter-loader .load-block .overlay__content .spinner{
    display: inline-block;
    width: 75px;
    height: 75px;
    border-width: 2px;
    border-color: rgba(0, 0, 0, 0.05);
    border-top-color: #fff;
    border-style: solid;
    border-radius: 100%;
    animation: spin 1s infinite linear;
  }
  @keyframes spin{
    100% { transform: rotate(360deg); }
  }
  .empty-product{
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
    margin-top: 30px;
  }
  .empty-product span{
    display: block;
    color: {{ settings.color_primary }};
    font-size: 50px;
    line-height: 0;
  }
  .empty-product h2{
    color: {{ settings.color_primary }};
    font-size: 30px;
    margin-top: 22px;
    text-transform: uppercase;
    line-height: 1;
  }
  .empty-product p{
    margin-top: 18px;
  }
  @media (max-width: 767px){
    .empty-product{
      margin-top: 20px;
    }
    .empty-product h2{
      margin-top: 12px;
    }
    .empty-product p{
      margin-top: 8px;
    }
  }
</style>
