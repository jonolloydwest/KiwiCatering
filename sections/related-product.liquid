<!-- PRODUCT SECTION START -->
{% assign product_limit = section.settings.section_product_limit_handle | default: '10' | plus: 0 %}
{% if product_limit <= 0 %}
  {% assign product_limit = 4 %}
{% endif %}
{% assign original_product = product %}
{% assign related_collection = nil %}
{% if collection and collection.products_count > 1 %}
  {% assign related_collection = collection %}
{% else %}
  {% assign fallback_collection = collections['all'] %}
  {% if fallback_collection and fallback_collection.products_count > 1 %}
    {% assign related_collection = fallback_collection %}
  {% endif %}
{% endif %}
{% assign related_products = blank %}
{% if related_collection %}
  {% assign related_products = related_collection.products | shuffle %}
{% endif %}
{% capture related_items %}
  {% assign displayed = 0 %}
  {% for related_product in related_products %}
    {% if related_product.handle != original_product.handle %}
      <div class="item">
        {% render 'product-grid-item', product: related_product, collection: related_collection %}
      </div>
      {% assign displayed = displayed | plus: 1 %}
      {% if displayed >= product_limit %}
        {% break %}
      {% endif %}
    {% endif %}
  {% endfor %}
{% endcapture %}
{% assign related_items = related_items | strip %}
{% if section.settings.section_products_enable and related_items != '' %}
<section class="related-product">
  <div class="container">
    <div class="row">
      <div class="col">
        {% if section.settings.section_title !='' %}
        <div class="section-capture">
          <div class="section-title">
            {% if section.settings.section_title !='' %}
            <h2 class="heading-home">{{ section.settings.section_title }}</h2>
            {% endif %}
          </div>
        </div>
        {% endif %}
        <div class="product-related-slider owl-carousel owl-theme" id="related-slider">
          {{ related_items }}
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  $('#related-slider').owlCarousel({
    loop: false,
    rewind: true,
    margin: 30,
    nav: true,
    navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
    dots: false,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    autoplay: true,
    sautoplayTimeout: 5000,
    autoplayHoverPause: true,
    responsive:{
      0:{
        items: 1,
        margin: 15
      },
      768:{
        items: 3
      },
      979:{
        items: 3
      },
      1199: {
        items: 3
      }
    }
  });
</script>
{% endif %}
<!-- PRODUCT SECTION END -->
