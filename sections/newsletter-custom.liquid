<!-- testimonial-area start -->
<section class="asyncLoad custom-newsletter-area">
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-12">
        <div class="newsletter-custom">
          {% if section.settings.testi_title !='' %}
          <div class="section-capture">
            <div class="section-title">
              {% if section.settings.testi_title !='' %}
              <h2 class="heading-home">
                {{ section.settings.testi_title }}
              </h2>
              {% endif %}
            </div>
          </div>
          {% endif %}
          {% form 'customer' %}
          {{ form.errors | default_errors }}
          {% if form.posted_successfully? %}
          <p class="text-success">
            <span>{{ settings.newsletter_success_text }}</span>
            <span>{{ settings.newsletter_coupan_code }}</span>
          </p>
          {% endif %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="subscribe-block">
            <input type="email" name="contact[email]" class="email mail" id="E-mail" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ settings.email_placeholder }}" autocapitalize="off" required>
            <div class="email-submit">
              <button type="submit" class="btn btn-style" name="commit" id="Subscribe">
                {{ settings.email_button }}
              </button>
            </div>
          </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
    "name": "Newletter Home",
    "blocks":[
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "insta_img",
                    "label": "Image",
                    "info": "Recommended Size: 110px x 110px"
                },
                {
                    "type": "url",
                    "id": "insta_url",
                    "label": "Banner URL"
                }
                
            ]
        }
    ],
	"name": "Newletter Home",
 	"settings": [
			{
                  "type": "text",
                  "id": "testi_title",
                  "label": "Title",
                  "default": "Customer love"
                }
		],

    "presets":[
        {
            "name": "Newletter Home",
            "category": "Instagram"
        }
    ]
}
{% endschema %}