<section class="project-count-area">
  <ul class="single-count">
    {% for block in section.blocks %}
    <li class="count-wrap">
      <div class="count-title">
        {% if block.settings.counter_number != '' %}
        <h2 class="count"{% if block.settings.counter_main_text_color != blank %} style="color: {{ block.settings.counter_main_text_color }}"{% endif %}>{{ block.settings.counter_number }}</h2>
        {% endif %}
        {% if block.settings.counter_title != '' %}
        <span{% if block.settings.counter_text_color != blank %} style="color: {{ block.settings.counter_text_color }}"{% endif %}>{{ block.settings.counter_title }}</span>
        {% endif %}
      </div>
    </li>
    {% endfor %}
  </ul>
</section>

<style>
  .project-count-area {
    {% if section.settings.counter_bgcolor_check %}
    background-color: {{ section.settings.counter_bgcolor }};
    {% endif %}
  }
</style>

<script>
  $(document).ready(function(){
    $('.count').counterUp({
      delay: 10,
      time: 1000
    });
  });
</script>
