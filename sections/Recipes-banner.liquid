<section class="slider-content">
    <div class="home-slider owl-carousel owl-theme" id="home-slider">
        {% for block in section.blocks %}
        <div class="item">
            <div class="slide-image recipes-img">
                {% assign slider_alt = block.settings.slider_title1 | default: shop.name %}
                {% assign slider_mobile_image = block.settings.slider_img1 %}
                {% assign slider_desktop_image = block.settings.slider_img %}
                {% if forloop.first %}
                  {% assign slider_loading = 'eager' %}
                {% else %}
                  {% assign slider_loading = 'lazy' %}
                {% endif %}
                {% if slider_mobile_image %}
                  {% assign slider_mobile_width = slider_mobile_image.width | default: 1440 %}
                  {% assign slider_mobile_height = slider_mobile_image.height | default: 850 %}
                  {% assign slider_mobile_src = slider_mobile_image | image_url: width: 1440 %}
                  <img loading="{{ slider_loading }}" class="medium-up-hidden" src="{{ slider_mobile_src }}" alt="{{ slider_alt }}" width="{{ slider_mobile_width }}" height="{{ slider_mobile_height }}">
                {% else %}
                  <img loading="{{ slider_loading }}" class="medium-up-hidden" src="{{ 'placeholder-image.svg' | asset_url }}" alt="{{ slider_alt }}" width="1440" height="850">
                {% endif %}
                {% if slider_desktop_image %}
                  {% assign slider_desktop_width = slider_desktop_image.width | default: 1920 %}
                  {% assign slider_desktop_height = slider_desktop_image.height | default: 850 %}
                  {% assign slider_desktop_src = slider_desktop_image | image_url: width: 2048 %}
                  <img loading="{{ slider_loading }}" class="small-hidden" src="{{ slider_desktop_src }}" alt="{{ slider_alt }}" width="{{ slider_desktop_width }}" height="{{ slider_desktop_height }}">
                {% else %}
                  <img loading="{{ slider_loading }}" class="small-hidden" src="{{ 'placeholder-image.svg' | asset_url }}" alt="{{ slider_alt }}" width="1920" height="850">
                {% endif %}
                <div class="slider-text-info">
                    {% if block.settings.slider_sub_title != '' %}
                    <span style="color:{{ block.settings.slider_sub_title_color }};">{{ block.settings.slider_sub_title }}</span>
                    {% endif %}
                    {% if block.settings.slider_title != '' %}
                    <h2 style="color:{{ block.settings.slider_title_color }};">
                        <span>{{ block.settings.slider_title1 }}</span>
                        <span>{{ block.settings.slider_title2 }}</span>
                    </h2>
                    {% endif %}                    
                    <div class="slider-button">
                        {% if block.settings.slider_button != '' %}
                        <a class="btn btn-style-medium" href="{{ block.settings.slider_banner_url }}">{{ block.settings.slider_button }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
<!-- Hero Section End -->
<script>
    $('#home-slider').owlCarousel({
        loop:true,
        margin:0,
        items:1,
        {%- if settings.enable_rtl -%}
        rtl: true,
        {%- else -%}
        fade: true,
        {%- endif -%}
        nav: true,
        navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
        lazyLoad: true,
        dots:false,
        autoplay:true,
        autoplayTimeout:8000,
  })
</script>
{% schema %}
{
    "name": "Main Slider",
    "blocks":[
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "slider_img",
                    "label": "Desktop Image",
                    "info": "Recommended Size: 1920px x 850px"
                },
                {
                    "type": "image_picker",
                    "id": "slider_img1",
                    "label": "Mobile Image"
                },
                {
                    "type": "url",
                    "id": "slider_banner_url",
                    "label": "Banner URL"
                },
                {
                    "type": "header",
                    "content": "Slider Title"
                },
                {
                    "type": "text",
                    "id": "slider_title1",
                    "label": "Title",
                    "default": "You can pair"
                },
                {
                    "type": "text",
                    "id": "slider_title2",
                    "label": "Title",
                    "default": "with products"
                },
                {
                    "type": "color",
                    "id": "slider_title_color",
                    "label": "Title color",
                    "default": "#303a0a"
                },
                {
                    "type": "header",
                    "content": "Slider Sub Title"
                },
                {
                    "type": "text",
                    "id": "slider_sub_title",
                    "label": "Sub Title",
                    "default": "Here to make heads turn"
                },
                {
                    "type": "color",
                    "id": "slider_sub_title_color",
                    "label": "Sub Title color",
                    "default": "#252525"
                },
                {
                    "type": "header",
                    "content": "Slider Button"
                },
                {
                    "type": "text",
                    "id": "slider_button",
                    "label": "Button Text",
                    "default": "Shop now"
                }
            ]
        }
    ]
}
{% endschema %}
