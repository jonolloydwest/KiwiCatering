<section class="collection-category">
  <div class="container">
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
      <div class="section-capture">
        <div class="section-title">
          {% if section.settings.section_special_title !='' %}
          <h2>{{ section.settings.section_special_title }}</h2>
          {% endif %}
        </div>
      </div>
      {% assign category_product = collections[section.settings.special_label_product] %}
      <div class="collection-slider owl-carousel owl-theme" id="pro-special">
        {% assign category_product_limit = section.settings.category_special_product_limit_handle %}
        {% for product in category_product.products limit: category_product_limit %}
        <div class="item">
          {% include 'product-grid-item' %}
        </div>
        {% endfor %}
      </div>
    </div>
    </div>
  </div>
</section>
{% comment %}
<script>
  $(document).ready(function() {
    // Function to initialize or destroy the Owl Carousel based on screen size
    function initializeOrDestroyOwlCarousel() {
      if ($(window).width() > 768) {
        // Initialize the Owl Carousel on larger screens
        $('#pro-special').owlCarousel({
          loop: false,
          rewind: true,
          margin: 30,
          nav: true,
          navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
          dots: false,
          {%- if settings.enable_rtl -%}
          rtl: true,
          {%- endif -%}
          autoplay: true,
          autoplayTimeout: 5000,
          autoplayHoverPause: true,
          responsive:{
            0:{
              items: 1,
              margin: 15
            },
            768:{
              items: 3
            },
            979:{
              items: 4
            },
            1199: {
              items: {{ section.settings.category_special_product_limit }}
            }
          }
        });
      } else {
        // Destroy the Owl Carousel on mobile
        var owlSpecial = $('#pro-special');
        owlSpecial.trigger('destroy.owl.carousel');
        owlSpecial.find('.owl-stage-outer').children().unwrap();
      }
    }

    // Call the initializeOrDestroyOwlCarousel function on document ready and window resize
    $(window).on('load resize', initializeOrDestroyOwlCarousel);
  });
</script>
{% endcomment %}

