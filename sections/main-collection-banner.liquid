{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  @media screen and (max-width: 749px) {
    .collection-hero--with-image .collection-hero__inner {
      padding-bottom: calc({{ settings.media_shadow_vertical_offset | at_least: 0 }}px + 2rem);
    }
  }
{%- endstyle -%}

<div class="collection-hero{% if section.settings.show_collection_image and collection.image %} collection-hero--with-image{% endif %} color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-hero__inner page-width {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {%- liquid
      assign eyebrow_text = section.settings.eyebrow_text
      assign intro_text = ''

      if collection.handle == 'cream-dispensers'
        assign eyebrow_text = 'KITCHEN ESSENTIALS'
        assign intro_text = '<p>Whipped cream, desserts and sauces are now faster and easier than ever before with our range of whipped-cream dispensers.</p>'
      elsif collection.handle == 'flavoured-cream-chargers'
        assign eyebrow_text = 'KITCHEN ESSENTIALS'
        assign intro_text = '<p>Explore flavoured cream chargers that infuse vanilla, strawberry, and other aromas into every whip.</p>'
      elsif collection.handle contains 'cream-charger'
        assign eyebrow_text = 'KITCHEN ESSENTIALS'
        assign intro_text = '<p>Keep your beverage and dessert stations stocked with reliable food-grade N2O cream chargers in service-ready pack sizes.</p>'
      elsif collection.handle contains 'birch-cutlery'
        assign eyebrow_text = 'ECO TABLEWARE'
        assign intro_text = '<p>Set the table with durable birch wood knives, forks, and spoons that stay sturdy in service while remaining compostable.</p>'
      elsif collection.handle contains 'palm-leaf'
        assign eyebrow_text = 'ECO TABLEWARE'
        assign intro_text = '<p>Serve canap√©s, mains, and desserts on naturally compostable palm leaf plates that elevate eco-conscious presentations.</p>'
      elsif collection.handle == 'all'
        assign eyebrow_text = 'CATERING ESSENTIALS'
        assign intro_text = "<p>Browse the full Kiwi Catering line-up of cream chargers, dispensers, and eco-conscious serveware ready for fast service.</p>"
      else
        capture generic_intro
          echo '<p>Discover curated '
          echo collection.title | downcase
          echo ' selected to keep your kitchen moving.</p>'
        endcapture
        assign intro_text = generic_intro | strip
      endif
    -%}
    <div class="collection-hero__text-wrapper legacy-collection-hero">
      {%- if eyebrow_text != blank -%}
        <p class="collection-hero__eyebrow">{{ eyebrow_text }}</p>
      {%- endif -%}
      <h1 class="collection-hero__title">
        <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
        {{- collection.title | escape -}}
      </h1>

      {%- if intro_text != blank -%}
        <div class="collection-hero__intro rte">{{ intro_text }}</div>
      {%- endif -%}

      {%- if section.settings.show_collection_description -%}
        {%- assign collection_description = collection.description -%}
        {%- if collection.handle == 'cream-dispensers' -%}
          {%- assign collection_description = '' -%}
        {%- endif -%}
        {%- if collection_description != blank -%}
          <div class="collection-hero__description rte">{{ collection_description }}</div>
        {%- endif -%}
      {%- endif -%}
    </div>

    {%- if section.settings.show_collection_image and collection.image -%}
      <div class="collection-hero__image-container media gradient">
        <img
          srcset="
            {%- if collection.image.width >= 165 -%}{{ collection.image | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if collection.image.width >= 360 -%}{{ collection.image | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if collection.image.width >= 535 -%}{{ collection.image | image_url: width: 535 }} 535w,{%- endif -%}
            {%- if collection.image.width >= 750 -%}{{ collection.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if collection.image.width >= 1070 -%}{{ collection.image | image_url: width: 1070 }} 1070w,{%- endif -%}
            {%- if collection.image.width >= 1500 -%}{{ collection.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {{ collection.image | image_url }} {{ collection.image.width }}w
          "
          src="{{ collection.image | image_url: width: 750 }}"
          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc(50vw - 130px), calc(50vw - 55px)"
          alt="{{ collection.image.alt | escape }}"
          width="{{ collection.image.width }}"
          height="{{ collection.image.height }}"
        >
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow text",
      "default": "New season arrivals"
    },
    {
      "type": "richtext",
      "id": "intro_text",
      "label": "Intro paragraph",
      "default": "<p>Discover curated collections crafted to elevate every occasion.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
