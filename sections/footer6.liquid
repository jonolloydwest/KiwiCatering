    margin-top: 40px;
  }
  @media(max-width: 991px){
    .footer-list-wrap .ftlink-li .payment-icon{
      justify-content: center;
    }
    .footer-list-wrap .ftlink-li .news-content,
    .footer-list-wrap .ftlink-li .payment-icon{
