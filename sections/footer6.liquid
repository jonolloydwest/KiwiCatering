    display: flex;
    align-items: center;
    margin-top: 22px;
    position: relative;
    z-index: 1;
  }
  @media (max-width : 1199px){
    .footer-info-wrap ul.footer-info li.logo p{
      font-size: 14px;
      width: 100%;
    }
  }
